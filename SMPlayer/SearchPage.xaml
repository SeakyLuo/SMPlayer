<Page
    x:Class="SMPlayer.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <StackPanel Margin="10,5">
        <StackPanel>
            <RelativePanel Margin="0,0,0,5">
                <TextBlock
                    VerticalAlignment="Stretch"
                    FontSize="18"
                    RelativePanel.AlignLeftWithPanel="True"
                    Text="Artists" />
                <local:IconTextButton
                    Foreground="{StaticResource SystemColorHighlightColor}"
                    Icon="ViewAll"
                    Label="View All"
                    RelativePanel.AlignRightWithPanel="True" />
            </RelativePanel>
            <controls:Carousel
                x:Name="SearchArtistsView"
                Background="Transparent"
                InvertPositive="True"
                ItemDepth="20"
                ItemMargin="0"
                ItemRotationX="0"
                ItemRotationY="19"
                ItemRotationZ="0"
                Orientation="Horizontal"
                SelectedIndex="0">
                <controls:Carousel.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </controls:Carousel.EasingFunction>
                <controls:Carousel.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10,5">
                            <Grid>
                                <Ellipse
                                    Width="120"
                                    Height="120"
                                    Fill="DarkGray" />
                                <FontIcon
                                    FontSize="50"
                                    Foreground="White"
                                    Glyph="&#xE8D4;" />
                            </Grid>
                            <TextBlock
                                Margin="0,5"
                                HorizontalAlignment="Center"
                                FontSize="16"
                                Text="Artist" />
                        </StackPanel>
                    </DataTemplate>
                </controls:Carousel.ItemTemplate>
            </controls:Carousel>
        </StackPanel>
        <StackPanel Margin="0,20">
            <RelativePanel Margin="0,0,0,5">
                <TextBlock
                    VerticalAlignment="Stretch"
                    FontSize="18"
                    RelativePanel.AlignLeftWithPanel="True"
                    Text="Albums" />
                <local:IconTextButton
                    Foreground="{StaticResource SystemColorHighlightColor}"
                    Icon="ViewAll"
                    Label="View All"
                    RelativePanel.AlignRightWithPanel="True" />
            </RelativePanel>
            <controls:Carousel x:Name="SearchAlbumView" Background="Transparent">
                <controls:Carousel.ItemTemplate>
                    <DataTemplate x:DataType="data:AlbumView">
                        <local:GridAlbumControl DataContext="{Binding}" />
                    </DataTemplate>
                </controls:Carousel.ItemTemplate>
            </controls:Carousel>
        </StackPanel>
        <StackPanel Margin="0,20">
            <RelativePanel Margin="0,0,0,5">
                <TextBlock
                    VerticalAlignment="Stretch"
                    FontSize="18"
                    RelativePanel.AlignLeftWithPanel="True"
                    Text="Songs" />
                <local:IconTextButton
                    Foreground="{StaticResource SystemColorHighlightColor}"
                    Icon="ViewAll"
                    Label="View All"
                    RelativePanel.AlignRightWithPanel="True" />
            </RelativePanel>
            <local:PlaylistControl x:Name="SearchMusicView" Background="Transparent" />
        </StackPanel>
        <StackPanel Margin="0,20">
            <RelativePanel Margin="0,0,0,5">
                <TextBlock
                    VerticalAlignment="Stretch"
                    FontSize="18"
                    RelativePanel.AlignLeftWithPanel="True"
                    Text="Playlist" />
                <local:IconTextButton
                    Foreground="{StaticResource SystemColorHighlightColor}"
                    Icon="ViewAll"
                    Label="View All"
                    RelativePanel.AlignRightWithPanel="True" />
            </RelativePanel>
            <controls:Carousel x:Name="SearchPlaylistView" Background="Transparent">
                <controls:Carousel.ItemTemplate>
                    <DataTemplate x:DataType="data:AlbumView">
                        <local:GridAlbumControl DataContext="{Binding}" />
                    </DataTemplate>
                </controls:Carousel.ItemTemplate>
            </controls:Carousel>
        </StackPanel>
    </StackPanel>
</Page>
