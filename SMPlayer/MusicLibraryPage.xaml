<Page
    x:Class="SMPlayer.MusicLibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Music Library" />
        <RelativePanel Grid.Row="1" Margin="10">
            <StackPanel Orientation="Horizontal" RelativePanel.AlignLeftWithPanel="True">
                <TextBlock Margin="10,0,10,0" Text="Song" />
                <TextBlock Margin="10,0,10,0" Text="Artist" />
                <TextBlock Margin="10,0,10,0" Text="Album" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" RelativePanel.AlignRightWithPanel="True">
                <Button
                    Margin="10,0,10,0"
                    VerticalAlignment="Center"
                    Content="&#xE8CB;"
                    FontSize="24"
                    Style="{StaticResource FontIconButton}" />
                <Button
                    Margin="10,0,20,0"
                    VerticalAlignment="Center"
                    Content="&#xE838;"
                    FontSize="24"
                    Style="{StaticResource FontIconButton}" />
            </StackPanel>
        </RelativePanel>
    </Grid>
</Page>
