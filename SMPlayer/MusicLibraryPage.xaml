<Page
    x:Class="SMPlayer.MusicLibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            x:Name="MusicLibraryTitleTextBlock"
            Style="{StaticResource TitleTextBlockStyle}"
            Text="Music Library" />
        <controls:DataGrid
            x:Name="MusicLibraryDataGrid"
            Grid.Row="1"
            Margin="10,10,10,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            x:DefaultBindMode="OneWay"
            AlternatingRowBackground="WhiteSmoke"
            AlternatingRowForeground="Gray"
            AreRowDetailsFrozen="False"
            AreRowGroupHeadersFrozen="True"
            AutoGenerateColumns="False"
            CanUserReorderColumns="True"
            CanUserResizeColumns="True"
            CanUserSortColumns="True"
            ColumnHeaderHeight="32"
            DoubleTapped="MusicLibraryDataGrid_DoubleTapped"
            Foreground="Black"
            FrozenColumnCount="0"
            GridLinesVisibility="None"
            HeadersVisibility="Column"
            HorizontalScrollBarVisibility="Visible"
            IsDoubleTapEnabled="True"
            IsReadOnly="True"
            SelectionMode="Extended"
            Sorting="MusicLibraryDataGrid_Sorting"
            VerticalScrollBarVisibility="Visible">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn
                    Width="40"
                    Binding="{Binding IsPlaying, Converter={StaticResource MusicIsPlayingConverter}, Mode=OneWay}"
                    CanUserResize="False"
                    CanUserSort="False"
                    Foreground="#0078D7"
                    Header=""
                    Tag="IsPlaying">
                    <controls:DataGridTextColumn.CellStyle>
                        <Style TargetType="controls:DataGridCell">
                            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
                        </Style>
                    </controls:DataGridTextColumn.CellStyle>
                </controls:DataGridTextColumn>
                <controls:DataGridTextColumn
                    Width="200"
                    MinWidth="100"
                    Binding="{Binding Name}"
                    CanUserSort="True"
                    Header="Name"
                    Tag="Name" />
                <controls:DataGridTextColumn
                    Width="160"
                    MinWidth="100"
                    Binding="{Binding Artist}"
                    CanUserSort="True"
                    Header="Artist" />
                <controls:DataGridTextColumn
                    Width="200"
                    MinWidth="100"
                    Binding="{Binding Album}"
                    CanUserSort="True"
                    Header="Album" />
                <controls:DataGridTextColumn
                    MinWidth="100"
                    CanUserReorder="True"
                    MaxWidth="120"
                    Binding="{Binding Duration, Converter={StaticResource MusicDurationConverter}}"
                    Header="Duration" />
                <controls:DataGridTextColumn
                    MinWidth="100"
                    Binding="{Binding Favorite, Converter={StaticResource MusicFavoriteConverter}, Mode=OneWay}"
                    CanUserResize="False"
                    Foreground="Red"
                    CanUserReorder="False"
                    Header="Favorite">
                    <controls:DataGridTextColumn.CellStyle>
                        <Style TargetType="controls:DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
                        </Style>
                    </controls:DataGridTextColumn.CellStyle>
                </controls:DataGridTextColumn>
                <controls:DataGridTextColumn
                    MinWidth="100"
                    MaxWidth="120"
                    Binding="{Binding PlayCount, Converter={StaticResource IntConverter}, Mode=OneWay}"
                    CanUserSort="True"
                    Header="Play Count" />
            </controls:DataGrid.Columns>
            <controls:DataGrid.RowStyle>
                <Style TargetType="controls:DataGridRow">
                    <Setter Property="controls:DataGridRow.ContextFlyout">
                        <Setter.Value>
                            <MenuFlyout Opening="MenuFlyout_Opening" />
                        </Setter.Value>
                    </Setter>
                </Style>
            </controls:DataGrid.RowStyle>
        </controls:DataGrid>
    </Grid>
</Page>