<Page
    x:Class="SMPlayer.NowPlayingFullPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.Resources>
            <media:BackdropBlurBrush x:Key="AlbumBlurBrush" Amount="50" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image
            x:Name="LargeAlbumCover"
            Grid.RowSpan="2"
            VerticalAlignment="Center"
            Source="{x:Bind FullMediaControl.AlbumCover.Source, Mode=TwoWay}"
            Stretch="UniformToFill" />
        <Grid Background="{StaticResource AlbumBlurBrush}">
            <local:MediaControl x:Name="FullMediaControl" Mode="Full" />
        </Grid>
        <controls:BladeView
            x:Name="NowPlayingFullBladeView"
            Grid.Row="1"
            BladeMode="Fullscreen">
            <controls:BladeView.Resources>
                <Style x:Key="NowPlayingFullBladeItemStyle" TargetType="controls:BladeItem">
                    <Setter Property="Background" Value="{StaticResource AlbumBlurBrush}" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="IsOpen" Value="True" />
                    <Setter Property="TitleBarVisibility" Value="Collapsed" />
                </Style>
                <Style x:Key="ScrollHeaderButtonStyle" TargetType="Button">
                    <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
                    <Setter Property="FontSize" Value="20" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Width" Value="40" />
                    <Setter Property="Height" Value="40" />
                    <Setter Property="Margin" Value="15" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
            </controls:BladeView.Resources>
            <controls:BladeItem Style="{StaticResource NowPlayingFullBladeItemStyle}">
                <Grid Background="Transparent">
                    <local:PlaylistControl
                        x:Name="FullPlaylistControl"
                        Margin="10"
                        AlternatingRowColor="False"
                        Theme="Dark" />
                </Grid>
            </controls:BladeItem>
            <controls:BladeItem
                x:Name="MusicPropertyBladeItem"
                RequestedTheme="Dark"
                Style="{StaticResource NowPlayingFullBladeItemStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <RelativePanel Margin="40,10,20,10">
                        <TextBlock
                            FontWeight="SemiBold"
                            Foreground="White"
                            RelativePanel.AlignLeftWithPanel="True"
                            Style="{StaticResource HeaderTextBlockStyle}"
                            Text="Properties"
                            TextAlignment="Left" />
                        <Button
                            x:Name="SaveMusicPropertiesButton"
                            Click="SaveMusicPropertiesButton_Click"
                            Content="&#xE74E;"
                            RelativePanel.LeftOf="ResetMusicPropertiesButton"
                            Style="{StaticResource ScrollHeaderButtonStyle}"
                            ToolTipService.ToolTip="Save" />
                        <Button
                            x:Name="ResetMusicPropertiesButton"
                            Background="Transparent"
                            Click="ResetMusicPropertiesButton_Click"
                            Content="&#xE72C;"
                            RelativePanel.AlignRightWithPanel="True"
                            Style="{StaticResource ScrollHeaderButtonStyle}"
                            ToolTipService.ToolTip="Reset" />
                    </RelativePanel>
                    <ScrollViewer Grid.Row="1">
                        <Grid
                            Padding="20,0"
                            Background="{StaticResource AlbumBlurBrush}"
                            RequestedTheme="Dark">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="1"
                                VerticalAlignment="Center"
                                Text="Title"
                                TextAlignment="Right" />
                            <TextBox
                                x:Name="TitleTextBox"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="20,5" />
                            <TextBlock
                                Grid.Row="2"
                                VerticalAlignment="Center"
                                Text="Subtitle"
                                TextAlignment="Right" />
                            <TextBox
                                x:Name="SubtitleTextBox"
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="20,5" />
                            <TextBlock
                                Grid.Row="3"
                                VerticalAlignment="Center"
                                Text="Artist"
                                TextAlignment="Right" />
                            <TextBox
                                x:Name="ArtistTextBox"
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="20,5" />
                            <TextBlock
                                Grid.Row="4"
                                VerticalAlignment="Center"
                                Text="Album"
                                TextAlignment="Right" />
                            <TextBox
                                x:Name="AlbumTextBox"
                                Grid.Row="4"
                                Grid.Column="1"
                                Margin="20,5" />
                            <TextBlock
                                Grid.Row="5"
                                VerticalAlignment="Center"
                                Text="Album Artist"
                                TextAlignment="Right" />
                            <TextBox
                                x:Name="AlbumArtistTextBox"
                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="20,5" />
                            <TextBlock
                                Grid.Row="6"
                                VerticalAlignment="Center"
                                Text="Play Count"
                                TextAlignment="Right" />
                            <TextBox
                                x:Name="PlayCountTextBox"
                                Grid.Row="6"
                                Grid.Column="1"
                                Margin="20,5" />
                            <TextBlock
                                Grid.Row="7"
                                VerticalAlignment="Center"
                                Text="Publisher"
                                TextAlignment="Right" />
                            <TextBox
                                x:Name="PublisherTextBox"
                                Grid.Row="7"
                                Grid.Column="1"
                                Margin="20,5" />
                            <TextBlock
                                Grid.Row="8"
                                VerticalAlignment="Center"
                                Text="TrackNumber"
                                TextAlignment="Right" />
                            <TextBox
                                x:Name="TrackNumberTextBox"
                                Grid.Row="8"
                                Grid.Column="1"
                                Margin="20,5" />
                            <TextBlock
                                Grid.Row="9"
                                VerticalAlignment="Center"
                                Text=" Year"
                                TextAlignment="Right" />
                            <TextBox
                                x:Name="YearTextBox"
                                Grid.Row="9"
                                Grid.Column="1"
                                Margin="20,5" />
                            <TextBlock
                                Grid.Row="10"
                                VerticalAlignment="Center"
                                Text="Bitrate"
                                TextAlignment="Right" />
                            <TextBlock
                                x:Name="BitRateTextBox"
                                Grid.Row="10"
                                Grid.Column="1"
                                Margin="20,5" />
                            <TextBlock
                                Grid.Row="11"
                                VerticalAlignment="Center"
                                Text="Composers"
                                TextAlignment="Right" />
                            <TextBlock
                                x:Name="ComposersTextBox"
                                Grid.Row="11"
                                Grid.Column="1"
                                Margin="20,5" />
                            <TextBlock
                                Grid.Row="12"
                                VerticalAlignment="Center"
                                Text="Conductors"
                                TextAlignment="Right" />
                            <TextBlock
                                x:Name="ConductorsTextBox"
                                Grid.Row="12"
                                Grid.Column="1"
                                Margin="20,5" />
                            <TextBlock
                                Grid.Row="13"
                                VerticalAlignment="Center"
                                Text="Duration"
                                TextAlignment="Right" />
                            <TextBlock
                                x:Name="DurationTextBox"
                                Grid.Row="13"
                                Grid.Column="1"
                                Margin="20,5" />
                            <TextBlock
                                Grid.Row="14"
                                VerticalAlignment="Center"
                                Text="Genre"
                                TextAlignment="Right" />
                            <TextBlock
                                x:Name="GenreTextBox"
                                Grid.Row="14"
                                Grid.Column="1"
                                Margin="20,5" />
                            <TextBlock
                                Grid.Row="15"
                                VerticalAlignment="Center"
                                Text="Producers"
                                TextAlignment="Right" />
                            <TextBlock
                                x:Name="ProducersTextBox"
                                Grid.Row="15"
                                Grid.Column="1"
                                Margin="20,5" />
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </controls:BladeItem>
            <controls:BladeItem x:Name="LyricsBladeItem" Style="{StaticResource NowPlayingFullBladeItemStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <RelativePanel Margin="40,10,20,10">
                        <TextBlock
                            FontWeight="SemiBold"
                            Foreground="White"
                            RelativePanel.AlignLeftWithPanel="True"
                            Style="{StaticResource HeaderTextBlockStyle}"
                            Text="Lyrics"
                            TextAlignment="Left" />
                        <Button
                            x:Name="SaveLyricsButton"
                            Click="SaveLyricsButton_Click"
                            Content="&#xE74E;"
                            RelativePanel.LeftOf="ResetLyricsButton"
                            Style="{StaticResource ScrollHeaderButtonStyle}"
                            ToolTipService.ToolTip="Save" />
                        <Button
                            x:Name="ResetLyricsButton"
                            Background="Transparent"
                            Click="ResetLyricsButton_Click"
                            Content="&#xE72C;"
                            RelativePanel.AlignRightWithPanel="True"
                            Style="{StaticResource ScrollHeaderButtonStyle}"
                            ToolTipService.ToolTip="Reset" />
                    </RelativePanel>
                    <TextBox
                        x:Name="LyricsTextBox"
                        Grid.Row="1"
                        Margin="20,0,20,10"
                        Background="Transparent"
                        BorderThickness="0"
                        RequestedTheme="Dark"
                        TextWrapping="Wrap" />
                </Grid>
            </controls:BladeItem>
        </controls:BladeView>
    </Grid>
</Page>
