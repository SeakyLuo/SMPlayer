<Page
    x:Class="SMPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="ListBoxIconStyle" TargetType="FontIcon">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style x:Key="ListBoxTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="20,0,0,0" />
        </Style>
        <Style x:Key="MediaControlButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Margin" Value="5,0,5,0" />
        </Style>
        <Style x:Key="MediaControlToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Margin" Value="5,0,5,0" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <NavigationView
            x:Name="MainNavigationView"
            IsBackButtonVisible="Collapsed"
            PaneClosing="MainNavigationView_PaneClosing"
            PaneOpening="MainNavigationView_PaneOpening"
            SelectionChanged="MainNavigationView_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    x:Name="NaviSearchItem"
                    Icon="Find"
                    Visibility="Collapsed" />
                <NavigationViewItem x:Name="NaviSearchBarItem">
                    <AutoSuggestBox
                        x:Name="NaviSearchBar"
                        Width="290"
                        PlaceholderText="Search"
                        QueryIcon="Find"
                        QuerySubmitted="NaviSearchBar_QuerySubmitted"
                        TextChanged="NaviSearchBar_TextChanged" />
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="MusicLibraryItem"
                    Content="Music Library"
                    Icon="Library" />
                <NavigationViewItem x:Name="NowPlayingItem" Content="Now Playing">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEC4F;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Name="ToPlayItem" Content="To Play">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF0B2;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Name="HistoryItem" Content="History">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE81C;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Name="PlaylistsItem" Content="Playlists">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEA37;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <Frame x:Name="MainFrame" />
        </NavigationView>

        <Grid Grid.Row="1" Background="LightGray">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                Margin="0"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <Image
                    x:Name="AlbumCover"
                    Width="100"
                    Height="100"
                    HorizontalAlignment="Left"
                    Source="Assets/music.png" />
                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        x:Name="TitleTextBlock"
                        Margin="10,0,5,5"
                        FontSize="24"
                        Text="Title" />
                    <TextBlock
                        x:Name="AuthorTextBlock"
                        Margin="10,5,5,0"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Author" />
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        x:Name="PrevButton"
                        Content="&#xE892;"
                        Style="{StaticResource MediaControlButtonStyle}" />
                    <Button
                        x:Name="PlayButton"
                        Click="PlayButton_Click"
                        Content="&#xE768;"
                        FontSize="30"
                        Style="{StaticResource MediaControlButtonStyle}" />
                    <Button
                        x:Name="NextButton"
                        Content="&#xE893;"
                        Style="{StaticResource MediaControlButtonStyle}" />
                </StackPanel>
                <RelativePanel>
                    <TextBlock
                        x:Name="LeftTimeTextBlock"
                        Margin="15"
                        RelativePanel.AlignLeftWithPanel="True"
                        Text="0:00" />
                    <Slider
                        x:Name="ProgressBar"
                        Margin="0,10,0,10"
                        RelativePanel.LeftOf="RightTimeTextBlock"
                        RelativePanel.RightOf="LeftTimeTextBlock" />
                    <TextBlock
                        x:Name="RightTimeTextBlock"
                        Margin="15"
                        RelativePanel.AlignRightWithPanel="True"
                        Text="0:00" />
                </RelativePanel>
            </StackPanel>
            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        x:Name="VolumeButton"
                        Click="VolumeButton_Click"
                        Content="&#xE15D;"
                        Style="{StaticResource MediaControlButtonStyle}" />
                    <Slider
                        x:Name="Volume"
                        Width="100"
                        Margin="10,10,20,10"
                        Maximum="100"
                        Minimum="0"
                        Value="50" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <ToggleButton
                        x:Name="ShuffleButton"
                        Click="ShuffleButton_Click"
                        Content="&#xE8B1;"
                        Style="{StaticResource MediaControlToggleButtonStyle}" />
                    <ToggleButton
                        x:Name="RepeatButton"
                        Click="RepeatButton_Click"
                        Content="&#xE8EE;"
                        Style="{StaticResource MediaControlToggleButtonStyle}" />
                    <ToggleButton
                        x:Name="RepeatOneButton"
                        Click="RepeatOneButton_Click"
                        Content="&#xE8ED;"
                        Style="{StaticResource MediaControlToggleButtonStyle}" />
                    <Button Content="&#xE712;" Style="{StaticResource MediaControlButtonStyle}">
                        <Button.Flyout>
                            <Flyout />
                        </Button.Flyout>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
