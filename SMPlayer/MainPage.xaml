<Page
    x:Class="SMPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:appmodel="using:Windows.ApplicationModel"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.UI.Xaml.Media"
    xmlns:triggers="using:SMPlayer.Triggers"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid
            x:Name="AppTitleBar"
            Height="32"
            Translation="0,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent"
            IsHitTestVisible="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn" Width="0" />
                <ColumnDefinition />
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0" />
            </Grid.ColumnDefinitions>
            <Border
                x:Name="AppTitleBorder"
                Grid.Column="1"
                Width="{x:Bind MainNavigationView.OpenPaneLength}"
                HorizontalAlignment="Left"
                Background="{StaticResource MainNavigationViewBackground}" />
            <TextBlock
                x:Name="AppTitle"
                Grid.Column="1"
                Padding="10,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="{x:Bind appmodel:Package.Current.DisplayName}"
                Visibility="Collapsed" />
        </Grid>
        <NavigationView
            x:Name="MainNavigationView"
            Grid.Row="1"
            IsBackButtonVisible="Collapsed"
            IsBackEnabled="True"
            ItemInvoked="MainNavigationView_ItemInvoked"
            PaneClosing="MainNavigationView_PaneClosing"
            PaneOpening="MainNavigationView_PaneOpening"
            Style="{StaticResource MainNavigationViewStyle}"
            TabNavigation="Cycle">
            <NavigationView.Header>
                <Grid x:Name="HeaderGrid" Background="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        x:Name="MainNavigationViewHeader"
                        VerticalAlignment="Center"
                        Style="{ThemeResource TitleBarHeaderStyle}"
                        Visibility="Visible" />
                    <Button
                        x:Name="HeaderSearchButton"
                        Grid.Column="1"
                        Width="40"
                        Height="40"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="HeaderSearchButton_Click"
                        Content="&#xE11A;"
                        FontFamily="Segoe MDL2 Assets"
                        Visibility="Collapsed" />
                    <AutoSuggestBox
                        x:Name="HeaderSearchBar"
                        Grid.ColumnSpan="2"
                        Margin="10,0"
                        VerticalAlignment="Center"
                        FocusDisengaged="HeaderNaviSearchBar_FocusDisengaged"
                        LosingFocus="HeaderNaviSearchBar_LosingFocus"
                        NoFocusCandidateFound="HeaderNaviSearchBar_NoFocusCandidateFound"
                        PlaceholderText="Search"
                        QueryIcon="Find"
                        QuerySubmitted="SearchBar_QuerySubmitted"
                        Style="{StaticResource BorderlessAutoSuggestBoxStyle}"
                        ToolTipService.ToolTip="Search"
                        Visibility="Collapsed" />
                </Grid>
            </NavigationView.Header>
            <NavigationView.AutoSuggestBox>
                <AutoSuggestBox
                    x:Name="NaviSearchBar"
                    PlaceholderText="Search"
                    QueryIcon="Find"
                    QuerySubmitted="SearchBar_QuerySubmitted"
                    Style="{StaticResource BorderlessAutoSuggestBoxStyle}"
                    ToolTipService.ToolTip="Search" />
            </NavigationView.AutoSuggestBox>
            <NavigationView.MenuItems>
                <NavigationViewItem
                    x:Name="MusicLibraryItem"
                    Content="Songs"
                    Icon="Library"
                    Tag="Music Library"
                    ToolTipService.ToolTip="Music Library" />
                <NavigationViewItem
                    x:Name="ArtistsItem"
                    Content="Artists"
                    Tag="Artists"
                    ToolTipService.ToolTip="Group By Artist">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8D4;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="AlbumsItem"
                    Content="Albums"
                    Tag="Album"
                    ToolTipService.ToolTip="Group By Album">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE93C;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemSeparator />
                <NavigationViewItem
                    x:Name="NowPlayingItem"
                    Content="Now Playing"
                    ToolTipService.ToolTip="Now Playing">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEC4F;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="RecentItem"
                    Content="Recent"
                    Tag="Recent"
                    ToolTipService.ToolTip="Recently Played">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE823;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="LocalItem"
                    Content="Local"
                    Tag="Local Folders"
                    ToolTipService.ToolTip="Local Folders and Music Files">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEC4E;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="PlaylistsItem"
                    Content="Playlists"
                    Tag="Playlists"
                    ToolTipService.ToolTip="Playlists">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEA37;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="MyFavoritesItem"
                    Content="My Favorites"
                    Tag="My Favorites"
                    ToolTipService.ToolTip="My Favorite Music">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEB51;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <Frame
                x:Name="NaviFrame"
                IsNavigationStackEnabled="True"
                Navigated="NaviFrame_Navigated" />
        </NavigationView>
        <Button
            x:Name="BackButton"
            Width="40"
            Height="32"
            HorizontalAlignment="Left"
            Background="Transparent"
            Click="BackButton_Click"
            Style="{StaticResource BackButtonStyle}"
            Visibility="Collapsed" />
        <Button
            x:Name="FakeTogglePaneButton"
            Grid.Row="1"
            Background="{StaticResource MinimalTitleBarColor}"
            Click="FakeTogglePaneButton_Click"
            Style="{ThemeResource PaneToggleButtonStyle}"
            Visibility="Collapsed" />
        <local:MediaControl
            x:Name="MainMediaControl"
            Grid.Row="2"
            Mode="Main" />
        <local:LoadingControl
            x:Name="MainLoadingControl"
            Grid.RowSpan="3"
            FontSize="36" />
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="WindowWidthChange">
                <VisualState x:Name="MinimumLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="FakeTogglePaneButton.Visibility" Value="Visible" />
                        <Setter Target="AppTitle.Visibility" Value="Visible" />
                        <Setter Target="AppTitleBar.Background" Value="{StaticResource MinimalTitleBarColor}" />
                        <Setter Target="BackButton.Background" Value="{StaticResource MinimalTitleBarColor}" />
                        <Setter Target="MainNavigationView.(NavigationView.PaneDisplayMode)" Value="LeftMinimal" />
                        <Setter Target="HeaderGrid.Height" Value="40" />
                        <Setter Target="HeaderGrid.Background" Value="{StaticResource MinimalTitleBarColor}" />
                        <Setter Target="HeaderSearchButton.Visibility" Value="Visible" />
                        <Setter Target="MainNavigationViewHeader.Style" Value="{StaticResource CompactHeaderStyle}" />
                        <Setter Target="MainLoadingControl.FontSize" Value="24" />
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="WideLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource MinimalNavigationViewWindowWidth}" />
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
            <VisualStateGroup x:Name="NavigationViewPaneStateChange">
                <VisualState x:Name="Open">
                    <VisualState.Setters>
                        <Setter Target="FakeTogglePaneButton.Visibility" Value="Collapsed" />
                        <Setter Target="BackButton.Background" Value="Transparent" />
                        <Setter Target="AppTitle.Visibility" Value="Visible" />
                        <Setter Target="AppTitleBorder.Background" Value="{ThemeResource SystemControlAcrylicWindowBrush}" />
                    </VisualState.Setters>
                    <VisualState.Storyboard>
                        <Storyboard>
                            <DoubleAnimation
                                EnableDependentAnimation="True"
                                Storyboard.TargetName="AppTitleBorder"
                                Storyboard.TargetProperty="Width"
                                From="{x:Bind MainNavigationView.CompactPaneLength}"
                                To="{x:Bind MainNavigationView.OpenPaneLength}"
                                Duration="0:0:0">
                                <DoubleAnimation.EasingFunction>
                                    <PowerEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </VisualState.Storyboard>
                </VisualState>
                <VisualState x:Name="Close">
                    <VisualState.Setters>
                        <Setter Target="BackButton.Background" Value="{StaticResource MinimalTitleBarColor}" />
                    </VisualState.Setters>
                    <VisualState.Storyboard>
                        <Storyboard>
                            <DoubleAnimation
                                EnableDependentAnimation="True"
                                Storyboard.TargetName="AppTitleBorder"
                                Storyboard.TargetProperty="Width"
                                From="{x:Bind MainNavigationView.OpenPaneLength}"
                                To="{x:Bind MainNavigationView.CompactPaneLength}"
                                Duration="0:0:0">
                                <DoubleAnimation.EasingFunction>
                                    <BounceEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </VisualState.Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
