<Page
    x:Class="SMPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.UI.Xaml.Media"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="ListBoxIconStyle" TargetType="FontIcon">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style x:Key="ListBoxTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="20,0,0,0" />
        </Style>
        <AcrylicBrush
            x:Key="NavigationViewDefaultPaneBackground"
            BackgroundSource="HostBackdrop"
            FallbackColor="{StaticResource SystemChromeMediumColor}"
            TintColor="{StaticResource SystemChromeAltHighColor}"
            TintOpacity="0.8" />
        <AcrylicBrush
            x:Key="NavigationViewTopPaneBackground"
            BackgroundSource="HostBackdrop"
            FallbackColor="{StaticResource SystemChromeMediumColor}"
            TintColor="{StaticResource SystemChromeAltHighColor}"
            TintOpacity="0.8" />
        <AcrylicBrush
            x:Key="NavigationViewExpandedPaneBackground"
            BackgroundSource="HostBackdrop"
            FallbackColor="{StaticResource SystemChromeMediumColor}"
            TintColor="{StaticResource SystemChromeAltHighColor}"
            TintOpacity="0.8" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <NavigationView
            x:Name="MainNavigationView"
            Background="{ThemeResource SystemControlAcrylicElementBrush}"
            IsBackButtonVisible="Collapsed"
            IsBackEnabled="True"
            ItemInvoked="MainNavigationView_ItemInvoked"
            PaneClosing="MainNavigationView_PaneClosing"
            PaneOpening="MainNavigationView_PaneOpening"
            TabNavigation="Cycle">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    x:Name="NaviSearchItem"
                    Icon="Find"
                    SelectsOnInvoked="False"
                    Visibility="Collapsed" />
                <NavigationViewItem x:Name="NaviSearchBarItem" SelectsOnInvoked="False">
                    <AutoSuggestBox
                        x:Name="NaviSearchBar"
                        Width="290"
                        PlaceholderText="Search"
                        QueryIcon="Find"
                        QuerySubmitted="NaviSearchBar_QuerySubmitted"
                        Style="{StaticResource BorderlessAutoSuggestBoxStyle}" />
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="MusicLibraryItem"
                    Content="Songs"
                    Icon="Library"
                    Tag="Music Library" />
                <NavigationViewItem
                    x:Name="ArtistsItem"
                    Content="Artists"
                    Tag="Artists">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8D4;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="AlbumsItem"
                    Content="Albums"
                    Tag="Album">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE93C;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemSeparator />
                <NavigationViewItem x:Name="NowPlayingItem" Content="Now Playing">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEC4F;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="RecentItem"
                    Content="Recent"
                    Tag="Recent">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE823;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="LocalItem"
                    Content="Local"
                    Tag="Local Folders">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEC4E;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="PlaylistsItem"
                    Content="Playlists"
                    Tag="Playlists">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEA37;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="MyFavoritesItem"
                    Content="My Favorites"
                    Tag="My Favorites">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEB51;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <Frame
                x:Name="NaviFrame"
                IsNavigationStackEnabled="True"
                Navigated="NaviFrame_Navigated" />
        </NavigationView>

        <local:MediaControl
            x:Name="MainMediaControl"
            Grid.Row="1"
            Mode="Main" />
    </Grid>
</Page>
