<Page x:ConnectionId='1'
    x:Class="SMPlayer.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Settings" />
        <Grid Margin="20,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                VerticalAlignment="Center"
                FontSize="22"
                Text="Music Folder:" />
            <AutoSuggestBox x:ConnectionId='2'
                x:Name="PathBox"
                Grid.Column="1"
                Margin="20,9,20,9"
                HorizontalAlignment="Stretch"
                PlaceholderText="The Root Folder of Your Music Library"
                                                       >
                <AutoSuggestBox.QueryIcon>
                    <FontIcon Glyph="&#xE838;" />
                </AutoSuggestBox.QueryIcon>
            </AutoSuggestBox>
        </Grid>
    </StackPanel>
</Page>

