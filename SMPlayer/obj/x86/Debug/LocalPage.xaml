<Page x:ConnectionId='1'
    x:Class="SMPlayer.LocalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Local Folders" />
        <ProgressRing x:ConnectionId='2'
            x:Name="LocalProgressRing"
            Grid.Row="1"
            Width="100"
            Height="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsActive="False"
            Visibility="Collapsed" />
        <GridView x:ConnectionId='3'
            x:Name="LocalFolderGridView"
            Grid.Row="1"
            Margin="10"
            IsItemClickEnabled="True"
                                                     
                                          >
            <GridView.ItemTemplate>
                <DataTemplate                                 >
                    <StackPanel x:ConnectionId='4' Margin="10">
                        <Grid
                            Width="160"
                            Height="160"
                            Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image x:ConnectionId='7'
                                Grid.Row="0"
                                Grid.Column="0"
                                                        />
                            <Image x:ConnectionId='8'
                                Grid.Row="0"
                                Grid.Column="1"
                                                         />
                            <Image x:ConnectionId='9'
                                Grid.Row="1"
                                Grid.Column="0"
                                                        />
                            <Image x:ConnectionId='10'
                                Grid.Row="1"
                                Grid.Column="1"
                                                         />
                        </Grid>
                        <TextBlock x:ConnectionId='5'
                            FontSize="16"
                            FontWeight="Bold"
                            HorizontalTextAlignment="Left"
                                                 />
                        <TextBlock x:ConnectionId='6'
                            FontSize="12"
                            HorizontalTextAlignment="Left"
                                                       />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

