<Page x:ConnectionId='1'
    x:Class="SMPlayer.LocalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        
    mc:Ignorable="d">

    <Page.Resources>
        <local:LargeThumbnailVisibilityConverter x:Key="LargeThumbnailVisibilityConverter" />
        <DataTemplate x:Key="GridFolderViewDataTemplate"                                 >
            <StackPanel x:ConnectionId='6' Margin="10">
                <Grid
                    Width="160"
                    Height="160"
                    Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image x:ConnectionId='9'
                        Grid.Row="0"
                        Grid.Column="0"
                        CacheMode="BitmapCache"
                                                />
                    <Image x:ConnectionId='10'
                        Grid.Row="0"
                        Grid.Column="1"
                        CacheMode="BitmapCache"
                                                 />
                    <Image x:ConnectionId='11'
                        Grid.Row="1"
                        Grid.Column="0"
                        CacheMode="BitmapCache"
                                                />
                    <Image x:ConnectionId='12'
                        Grid.Row="1"
                        Grid.Column="1"
                        CacheMode="BitmapCache"
                                                 />
                    <Image x:ConnectionId='13'
                        x:Name="LargeThumbnail"
                        Grid.RowSpan="2"
                        Grid.ColumnSpan="2"
                                                        
                        Visibility="{Binding Converter={StaticResource LargeThumbnailVisibilityConverter}}" />
                </Grid>
                <TextBlock x:ConnectionId='7'
                    FontSize="16"
                    FontWeight="Bold"
                    HorizontalTextAlignment="Left"
                                        
                    TextWrapping="Wrap" />
                <TextBlock x:ConnectionId='8'
                    FontSize="12"
                    HorizontalTextAlignment="Left"
                                               />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="GridMusicViewDataTemplate"                                >
            <StackPanel x:ConnectionId='2' Margin="10">
                <Image x:ConnectionId='3'
                    Width="160"
                    Height="160"
                    Margin="10"
                                                />
                <TextBlock x:ConnectionId='4'
                    FontSize="16"
                    FontWeight="Bold"
                    HorizontalTextAlignment="Left"
                                         />
                <TextBlock x:ConnectionId='5'
                    FontSize="12"
                    HorizontalTextAlignment="Left"
                                           />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Local Items" />
        <RelativePanel
            Grid.Row="1"
            Margin="20,0,20,0"
            HorizontalAlignment="Stretch">
            <TextBlock
                FontSize="24"
                RelativePanel.AlignLeftWithPanel="True"
                Text="Folders"
                TextAlignment="Center" />
            <StackPanel Orientation="Horizontal" RelativePanel.AlignRightWithPanel="True">
                <Button x:ConnectionId='16' x:Name="SwitchViewButton" Background="Transparent">
                    <SymbolIcon Symbol="List" />
                </Button>
                <TextBlock x:ConnectionId='17'
                    x:Name="SwitchViewTextBlock"
                    VerticalAlignment="Center"
                    Text="List View" />
            </StackPanel>
        </RelativePanel>
        <ProgressRing x:ConnectionId='14'
            x:Name="LocalProgressRing"
            Grid.Row="2"
            Width="100"
            Height="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsActive="False"
            Visibility="Collapsed" />
        <GridView x:ConnectionId='15'
            x:Name="LocalFolderGridView"
            Grid.Row="2"
            Margin="10"
            IsItemClickEnabled="True"
                                                     
            ItemTemplate="{StaticResource GridFolderViewDataTemplate}"
                                               />
        <RelativePanel
            Grid.Row="3"
            Margin="20,0,20,0"
            HorizontalAlignment="Stretch">
            <TextBlock
                FontSize="24"
                RelativePanel.AlignLeftWithPanel="True"
                Text="Music"
                TextAlignment="Center" />
            <!--<StackPanel Orientation="Horizontal" RelativePanel.AlignRightWithPanel="True">
                <Button x:Name="SwitchViewButton" Background="Transparent">
                    <SymbolIcon Symbol="List" />
                </Button>
                <TextBlock
                    x:Name="SwitchViewTextBlock"
                    VerticalAlignment="Center"
                    Text="List View" />
            </StackPanel>-->
        </RelativePanel>
    </Grid>
</Page>

