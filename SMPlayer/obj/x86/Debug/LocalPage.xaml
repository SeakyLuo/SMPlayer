<Page x:ConnectionId='1'
    x:Class="SMPlayer.LocalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        
    mc:Ignorable="d">

    <Page.Resources>
        <local:LargeThumbnailVisibilityConverter x:Key="LargeThumbnailVisibilityConverter" />
        <SolidColorBrush x:Key="NavigationViewTopPaneBackground" Color="{ThemeResource ApplicationPageBackgroundThemeBrush}" />
        <DataTemplate x:Key="GridMusicViewDataTemplate"                                >
            <StackPanel x:ConnectionId='2' Margin="10">
                <Image x:ConnectionId='3'
                    Width="160"
                    Height="160"
                    Margin="10"
                                                />
                <TextBlock x:ConnectionId='4'
                    FontSize="16"
                    FontWeight="Bold"
                    HorizontalTextAlignment="Left"
                                         />
                <TextBlock x:ConnectionId='5'
                    FontSize="12"
                    HorizontalTextAlignment="Left"
                                           />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Local Items" />
        <NavigationView x:ConnectionId='6'
            x:Name="LocalNavigationView"
            Grid.Row="1"
                                                             
            IsBackEnabled="True"
            IsSettingsVisible="False"
                                                         
            PaneDisplayMode="Top"
            PaneTitle="Cuurent Folder">
            <NavigationView.MenuItems>
                <NavigationViewItem x:ConnectionId='7' x:Name="LocalFoldersItem" Content="Folders">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8B7;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:ConnectionId='8'
                    x:Name="LocalMusicItem"
                    Content="Music"
                    Icon="MusicInfo" />
            </NavigationView.MenuItems>
            <NavigationView.PaneFooter>
                <StackPanel Orientation="Horizontal">
                    <NavigationViewItem x:ConnectionId='9'
                        x:Name="LocalListViewItem"
                        Margin="0,0,10,0"
                        Content="List View"
                                                         
                        Visibility="Visible" >
                        <NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE14C;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                    <NavigationViewItem x:ConnectionId='10'
                        x:Name="LocalGridViewItem"
                        Margin="0,0,10,0"
                        Content="Grid View"
                                                         
                        Visibility="Collapsed">
                        <NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF0E2;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                </StackPanel>
            </NavigationView.PaneFooter>
            <Frame x:ConnectionId='11'
                x:Name="LocalFrame"
                IsNavigationStackEnabled="True"
                                                 />
        </NavigationView>
    </Grid>
</Page>

