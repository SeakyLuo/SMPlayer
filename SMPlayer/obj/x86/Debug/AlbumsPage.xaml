<Page x:ConnectionId='1'
    x:Class="SMPlayer.AlbumsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='2'
            x:Name="MusicLibraryTitleTextBlock"
            Style="{StaticResource TitleTextBlockStyle}"
            Text="Albums" />
        <GridView x:ConnectionId='3'
            Grid.Row="1"
            Margin="10"
            IsItemClickEnabled="True"
                                         >
            <GridView.ItemTemplate>
                <DataTemplate                                >
                    <StackPanel x:ConnectionId='4' Width="160" Margin="10" VerticalAlignment="Top">
                        <Image x:ConnectionId='5'
                            VerticalAlignment="Top"
                                                    />
                        <TextBlock x:ConnectionId='6'
                            Margin="0,5,0,0"
                            Grid.Row="1"
                            FontWeight="SemiBold"
                            MaxLines="2"
                                                
                            TextAlignment="Left"
                            TextWrapping="Wrap" />
                        <TextBlock x:ConnectionId='7'
                            Grid.Row="2"
                            FontSize="12"
                            Foreground="Gray"
                                                  
                            TextAlignment="Left" />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

