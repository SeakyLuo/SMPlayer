<Page
    x:Class="SMPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="ListBoxButton" TargetType="Button">
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="24" />
        </Style>
        <Style x:Key="ListBoxTextBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10,0,0,0" />
        </Style>
        <Style x:Key="MediaControlButton" TargetType="Button">
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="24" />
            <Setter Property="Margin" Value="5,0,5,0" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <SplitView x:ConnectionId='2'
            x:Name="MySplitView"
            CompactPaneLength="50"
            DisplayMode="CompactInline"
            IsPaneOpen="True"
            OpenPaneLength="320">
            <SplitView.Pane>
                <StackPanel Background="LightGray">
                    <Button x:ConnectionId='16'
                        x:Name="HambergurButton"
                        Background="Transparent"
                                                     
                        Content="&#xE700;"
                        Style="{StaticResource ListBoxButton}" />
                    <StackPanel x:ConnectionId='17'
                        x:Name="SearchPanel"
                        Height="50"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button x:ConnectionId='18'
                            x:Name="SearchButton"
                                                      
                            Content="&#xE721;"
                            Style="{StaticResource ListBoxButton}"
                            Visibility="Collapsed" />
                        <AutoSuggestBox x:ConnectionId='19'
                            x:Name="SearchBar"
                            Width="300"
                            Margin="5"
                            VerticalAlignment="Center"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            PlaceholderText="Search"
                            QueryIcon="Find"
                                                                     
                                                               
                            Visibility="Visible" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="&#xE838;" Style="{StaticResource ListBoxButton}" />
                        <TextBlock Style="{StaticResource ListBoxTextBlock}" Text="Open Folder" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="&#xF0B2;" Style="{StaticResource ListBoxButton}" />
                        <TextBlock Style="{StaticResource ListBoxTextBlock}" Text="To Play" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="&#xE81C;" Style="{StaticResource ListBoxButton}" />
                        <TextBlock Style="{StaticResource ListBoxTextBlock}" Text="History" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="&#xEA37;" Style="{StaticResource ListBoxButton}" />
                        <TextBlock Style="{StaticResource ListBoxTextBlock}" Text="Playlists" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="&#xE713;" Style="{StaticResource ListBoxButton}" />
                        <TextBlock Style="{StaticResource ListBoxTextBlock}" Text="Settings" />
                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid />
            </SplitView.Content>
        </SplitView>
        <Grid Grid.Row="1" Background="LightPink">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <Image x:ConnectionId='13'
                    x:Name="AlbumCover"
                    Width="100"
                    Height="100"
                    Source="Assets/music.png" />
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:ConnectionId='14'
                        x:Name="TitleTextBlock"
                        Margin="10,0,5,5"
                        FontSize="24"
                        Text="Title" />
                    <TextBlock x:ConnectionId='15'
                        x:Name="AuthorTextBlock"
                        Margin="10,5,5,0"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Author" />
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button x:ConnectionId='8'
                        x:Name="ShuffleButton"
                        Content="&#xE8B1;"
                                                   
                        Style="{StaticResource MediaControlButton}" />
                    <Button x:ConnectionId='9'
                        x:Name="PrevButton"
                        Content="&#xE892;"
                        Style="{StaticResource MediaControlButton}" />
                    <Button x:ConnectionId='10'
                        x:Name="PlayButton"
                        Content="&#xE768;"
                                                
                        Style="{StaticResource MediaControlButton}" />
                    <Button x:ConnectionId='11'
                        x:Name="NextButton"
                        Content="&#xE893;"
                        Style="{StaticResource MediaControlButton}" />
                    <Button x:ConnectionId='12'
                        x:Name="RepeatButton"
                        Content="&#xE8EE;"
                                                  
                        Style="{StaticResource MediaControlButton}" />
                </StackPanel>
                <RelativePanel>
                    <TextBlock x:ConnectionId='5'
                        x:Name="LeftTimeTextBlock"
                        Margin="15"
                        RelativePanel.AlignLeftWithPanel="True"
                        Text="0:00" />
                    <Slider x:ConnectionId='6'
                        x:Name="ProgressBar"
                        Margin="0,10,0,10"
                        RelativePanel.LeftOf="RightTimeTextBlock"
                        RelativePanel.RightOf="LeftTimeTextBlock" />
                    <TextBlock x:ConnectionId='7'
                        x:Name="RightTimeTextBlock"
                        Margin="15"
                        RelativePanel.AlignRightWithPanel="True"
                        Text="0:00" />
                </RelativePanel>
            </StackPanel>
            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button x:ConnectionId='3' x:Name="VolumeButton" Content="&#xE15D;" Style="{StaticResource MediaControlButton}"                           />
                    <Slider x:ConnectionId='4'
                        x:Name="Volume"
                        Width="100"
                        Margin="10,10,20,10"
                        Maximum="100"
                        Minimum="0"
                        Value="50" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button Content="&#xE712;" Style="{StaticResource MediaControlButton}" >
                        <Button.Flyout>
                            <Flyout>
                                
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

