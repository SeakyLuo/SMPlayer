<Page x:ConnectionId='1'
    x:Class="SMPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.UI.Xaml.Media"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="ListBoxIconStyle" TargetType="FontIcon">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style x:Key="ListBoxTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="20,0,0,0" />
        </Style>
        <AcrylicBrush
            x:Key="NavigationViewDefaultPaneBackground"
            BackgroundSource="HostBackdrop"
            FallbackColor="{StaticResource SystemChromeMediumColor}"
            TintColor="{StaticResource SystemChromeAltHighColor}"
            TintOpacity="0.8" />
        <AcrylicBrush
            x:Key="NavigationViewTopPaneBackground"
            BackgroundSource="HostBackdrop"
            FallbackColor="{StaticResource SystemChromeMediumColor}"
            TintColor="{StaticResource SystemChromeAltHighColor}"
            TintOpacity="0.8" />
        <AcrylicBrush
            x:Key="NavigationViewExpandedPaneBackground"
            BackgroundSource="HostBackdrop"
            FallbackColor="{StaticResource SystemChromeMediumColor}"
            TintColor="{StaticResource SystemChromeAltHighColor}"
            TintOpacity="0.8" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <NavigationView x:ConnectionId='2'
            x:Name="MainNavigationView"
            Background="{ThemeResource SystemControlAcrylicElementBrush}"
            IsBackButtonVisible="Collapsed"
            IsBackEnabled="True"
                                                        
                                                        
                                                        
            TabNavigation="Cycle">
            <NavigationView.MenuItems>
                <NavigationViewItem x:ConnectionId='21'
                    x:Name="NaviSearchItem"
                    Icon="Find"
                    Visibility="Collapsed" />
                <NavigationViewItem x:ConnectionId='22' x:Name="NaviSearchBarItem">
                    <AutoSuggestBox x:ConnectionId='31'
                        x:Name="NaviSearchBar"
                        Width="290"
                        Background="{ThemeResource SystemControlAcrylicElementBrush}"
                        BorderBrush="{ThemeResource SystemControlAcrylicElementBrush}"
                        PlaceholderText="Search"
                        QueryIcon="Find"
                                                                      />
                </NavigationViewItem>
                <NavigationViewItem x:ConnectionId='23'
                    x:Name="MusicLibraryItem"
                    Content="Songs"
                    Icon="Library"
                    Tag="Music Library" />
                <NavigationViewItem x:ConnectionId='24'
                    x:Name="ArtistsItem"
                    Content="Artists"
                    Tag="Artists">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8D4;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:ConnectionId='25'
                    x:Name="AlbumsItem"
                    Content="Albums"
                    Tag="Album">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE93C;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemSeparator />
                <NavigationViewItem x:ConnectionId='26' x:Name="NowPlayingItem" Content="Now Playing">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEC4F;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:ConnectionId='27'
                    x:Name="RecentItem"
                    Content="Recent"
                    Tag="Recent">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE823;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:ConnectionId='28'
                    x:Name="LocalItem"
                    Content="Local"
                    Tag="Local Folders">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEC4E;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:ConnectionId='29'
                    x:Name="PlaylistsItem"
                    Content="Playlists"
                    Tag="Playlists">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEA37;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:ConnectionId='30'
                    x:Name="MyFavoritesItem"
                    Content="My Favorites"
                    Tag="My Favorites">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEB51;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <Frame x:ConnectionId='32'
                x:Name="NaviFrame"
                IsNavigationStackEnabled="True"
                                                />
        </NavigationView>

        <Grid x:ConnectionId='3'
            x:Name="MediaControlGrid"
            Grid.Row="1"
            Background="{ThemeResource SystemControlAcrylicElementBrush}"
            RequestedTheme="Dark">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid
                Grid.Column="0"
                Margin="0"
                HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image x:ConnectionId='18'
                    x:Name="AlbumCover"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Width="100"
                    Height="100"
                    Source="Assets/monotone_bg_wide.png"
                    Stretch="UniformToFill" />
                <TextBlock x:ConnectionId='19'
                    x:Name="TitleTextBlock"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="10,0,5,5"
                    VerticalAlignment="Bottom"
                    FontSize="24"
                    Text="" />
                <TextBlock x:ConnectionId='20'
                    x:Name="ArtistTextBlock"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,5,5,0"
                    VerticalAlignment="Top"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="" />
            </Grid>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button x:ConnectionId='14'
                        x:Name="PrevButton"
                                                
                        Content="&#xE892;"
                        Style="{StaticResource MediaControlButtonStyle}"
                        Template="{StaticResource MediaControlButtonTemplate}" />
                    <Button x:ConnectionId='15'
                        x:Name="PlayButton"
                        Width="48"
                        Height="48"
                        HorizontalAlignment="Center"
                        BorderBrush="{StaticResource MediaControlPlayButtonBorderBrush}"
                                                
                        CornerRadius="25"
                        Style="{StaticResource MediaControlButtonStyle}"
                        Template="{StaticResource MediaControlButtonTemplate}">
                        <Button.Content>
                            <FontIcon x:ConnectionId='17'
                                x:Name="PlayButtonIcon"
                                FontSize="24"
                                Glyph="&#xE768;" />
                        </Button.Content>
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="F3" />
                        </Button.KeyboardAccelerators>
                    </Button>
                    <Button x:ConnectionId='16'
                        x:Name="NextButton"
                                                
                        Content="&#xE893;"
                        Style="{StaticResource MediaControlButtonStyle}"
                        Template="{StaticResource MediaControlButtonTemplate}" />
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:ConnectionId='11'
                        x:Name="LeftTimeTextBlock"
                        Margin="10,0,20,0"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI"
                        RelativePanel.AlignLeftWithPanel="True"
                        Text="0:00" />
                    <Slider x:ConnectionId='12'
                        x:Name="MediaSlider"
                        Grid.Column="1"
                        IsThumbToolTipEnabled="True"
                                                                                 
                        ManipulationMode="All"
                                                                             
                                                                               
                        Minimum="0"
                        RelativePanel.LeftOf="RightTimeTextBlock"
                        RelativePanel.RightOf="LeftTimeTextBlock"
                        Style="{StaticResource MediaProgressSliderStyle}"
                        ThumbToolTipValueConverter="{StaticResource MusicDurationConverter}"
                                                                />
                    <TextBlock x:ConnectionId='13'
                        x:Name="RightTimeTextBlock"
                        Grid.Column="2"
                        Margin="20,0,10,0"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI"
                        RelativePanel.AlignRightWithPanel="True"
                        Text="0:00" />
                </Grid>
            </StackPanel>
            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button x:ConnectionId='7'
                        x:Name="VolumeButton"
                                                  
                        Content="&#xE15D;"
                        Style="{StaticResource MediaControlButtonStyle}"
                        Template="{StaticResource MediaControlButtonTemplate}" />
                    <Slider x:ConnectionId='8'
                        x:Name="VolumeSlider"
                        Width="100"
                        Margin="10,0,20,0"
                        VerticalAlignment="Center"
                        Foreground="White"
                        Maximum="100"
                        Minimum="0"
                        Style="{StaticResource MediaProgressSliderStyle}"
                                                                
                        Value="50" />
                    <Button x:ConnectionId='9'
                        x:Name="LikeButton"
                                                
                        Style="{StaticResource MediaControlButtonStyle}"
                        Template="{StaticResource MediaControlButtonTemplate}">
                        <Button.Content>
                            <FontIcon x:ConnectionId='10' x:Name="LikeButtonIcon" Glyph="&#xEB51;" />
                        </Button.Content>
                    </Button>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <ToggleButton x:ConnectionId='4'
                        x:Name="ShuffleButton"
                                                   
                        Content="&#xE8B1;"
                        Style="{StaticResource MediaControlToggleButtonStyle}"
                        Template="{StaticResource MediaControlToggleButtonTemplate}" />
                    <ToggleButton x:ConnectionId='5'
                        x:Name="RepeatButton"
                                                  
                        Content="&#xE8EE;"
                        Style="{StaticResource MediaControlToggleButtonStyle}"
                        Template="{StaticResource MediaControlToggleButtonTemplate}" />
                    <ToggleButton x:ConnectionId='6'
                        x:Name="RepeatOneButton"
                                                     
                        Content="&#xE8ED;"
                        Style="{StaticResource MediaControlToggleButtonStyle}"
                        Template="{StaticResource MediaControlToggleButtonTemplate}" />
                    <Button
                        Content="&#xE712;"
                        Style="{StaticResource MediaControlButtonStyle}"
                        Template="{StaticResource MediaControlButtonTemplate}">
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutSubItem Icon="Add" Text="Add To Playlist" />
                                <MenuFlyoutItem Icon="Fullscreen" Text="Full Window" />
                                <MenuFlyoutItem Icon="MusicInfo" Text="Music Info" />
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

