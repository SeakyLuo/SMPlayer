<Page x:ConnectionId='1'
    x:Class="SMPlayer.LocalFoldersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Rectangle x:ConnectionId='2' x:Name="LoadingControlPlaceHolder" Height="4" />
        <ProgressBar x:ConnectionId='3' x:Name="LocalLoadingControl" IsIndeterminate="True" />
        <GridView x:ConnectionId='4'
            x:Name="LocalFoldersGridView"
            Margin="10"
            IsItemClickEnabled="True"
                                                      
                                            
            SelectionMode="None">
            <GridView.ItemTemplate>
                <DataTemplate                                 >
                    <StackPanel x:ConnectionId='5' Margin="10">
                        <Grid
                            Width="160"
                            Height="160"
                            Margin="10,10,10,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <controls:ImageEx x:ConnectionId='8'
                                Grid.Row="0"
                                Grid.Column="0"
                                                       
                                Style="{StaticResource CachedImageStyle}" />
                            <controls:ImageEx x:ConnectionId='9'
                                Grid.Row="0"
                                Grid.Column="1"
                                                        
                                Style="{StaticResource CachedImageStyle}" />
                            <controls:ImageEx x:ConnectionId='10'
                                Grid.Row="1"
                                Grid.Column="0"
                                                       
                                Style="{StaticResource CachedImageStyle}" />
                            <controls:ImageEx x:ConnectionId='11'
                                Grid.Row="1"
                                Grid.Column="1"
                                                        
                                Style="{StaticResource CachedImageStyle}" />
                            <controls:ImageEx x:ConnectionId='12'
                                x:Name="LargeThumbnail"
                                Grid.RowSpan="2"
                                Grid.ColumnSpan="2"
                                                                
                                Style="{StaticResource CachedImageStyle}"
                                Visibility="{Binding Converter={StaticResource LargeThumbnailVisibilityConverter}}" />
                        </Grid>
                        <TextBlock x:ConnectionId='6'
                            FontSize="16"
                            FontWeight="SemiBold"
                            HorizontalTextAlignment="Left"
                                                
                            TextWrapping="Wrap" />
                        <TextBlock x:ConnectionId='7'
                            Margin="0,3,0,0"
                            FontSize="12"
                            Foreground="Gray"
                            HorizontalTextAlignment="Left"
                                                       />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

