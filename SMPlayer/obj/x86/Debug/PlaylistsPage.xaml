<Page x:ConnectionId='1'
    x:Class="SMPlayer.PlaylistsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <controls:TabView x:ConnectionId='2'
            x:Name="PlaylistTabView"
            AllowDrop="True"
            CanCloseTabs="False"
            CanDragItems="True"
            CanReorderItems="True"
                                                                 
                                                         
            IsCloseButtonOverlay="False"
                                                         
            SelectedTabWidth="200"
                                                               
            SelectionMode="Single"
                                                   
            TabNavigation="Cycle"
            TabWidthBehavior="Actual">
            <controls:TabView.Resources>
                <x:Double x:Key="TabViewItemHeaderMinHeight">40</x:Double>
                <x:Double x:Key="TabViewItemHeaderMinWidth">48</x:Double>
                <x:Double x:Key="TabViewItemHeaderMaxWidth">200</x:Double>
            </controls:TabView.Resources>
            <controls:TabView.ItemHeaderTemplate>
                <DataTemplate                           >
                    <StackPanel x:ConnectionId='4' Orientation="Horizontal">
                        <StackPanel.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem x:ConnectionId='5'
                                                       
                                    Icon="Rename"
                                    Text="Rename PlayList" />
                                <MenuFlyoutItem x:ConnectionId='6'
                                                          
                                    Icon="Copy"
                                    Text="Duplicate PlayList" />
                                <MenuFlyoutItem x:ConnectionId='7'
                                                       
                                    Icon="Delete"
                                    Text="Delete PlayList" />
                            </MenuFlyout>
                        </StackPanel.ContextFlyout>
                        <SymbolIcon Symbol="Audio" />
                        <TextBlock x:ConnectionId='8'
                            x:Name="NameTextBlock"
                            Margin="10,0,5,0"
                                                              />
                        <TextBox x:ConnectionId='9'
                            x:Name="NameTextBox"
                            Margin="10,0,5,0"
                            AcceptsReturn="True"
                            Background="Transparent"
                                                                                     
                                                             
                            Visibility="Collapsed" />
                    </StackPanel>
                </DataTemplate>
            </controls:TabView.ItemHeaderTemplate>
            <controls:TabView.ItemTemplate>
                <DataTemplate                           >
                    <ListView x:ConnectionId='11' ItemTemplate="{StaticResource MusicListViewTemplate}"                             >
                        <ListView.Header>
                            <controls:ScrollHeader Mode="Sticky">
                                <Grid x:ConnectionId='12'
                                    x:Name="PlaylistInfoGrid"
                                    Padding="36"
                                    Background="#222222"
                                                                    
                                    RequestedTheme="Dark">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image
                                        x:Name="PlaylistCover"
                                        Grid.RowSpan="4"
                                        Width="180"
                                        Height="180"
                                        Margin="0,0,20,0" />
                                    <TextBlock x:ConnectionId='14'
                                        Grid.Column="1"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                                             />
                                    <TextBlock x:ConnectionId='15'
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0,5"
                                                                                                             />
                                    <StackPanel
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Orientation="Horizontal">
                                        <NavigationViewItem
                                            Margin="5,0"
                                            Padding="0,0,10,0"
                                            Content="Shuffle"
                                            Icon="Shuffle" />
                                        <NavigationViewItem
                                            Margin="5,0"
                                            Padding="0,0,10,0"
                                            Content="Add To"
                                            Icon="Add" />
                                        <NavigationViewItem
                                            Margin="5,0"
                                            Padding="0,0,10,0"
                                            Content="Rename"
                                            Icon="Edit" />
                                        <NavigationViewItem
                                            Margin="5,0"
                                            Padding="0,0,10,0"
                                            Content="Delete"
                                            Icon="Delete" />
                                    </StackPanel>
                                </Grid>
                            </controls:ScrollHeader>
                        </ListView.Header>
                    </ListView>
                </DataTemplate>
            </controls:TabView.ItemTemplate>

            <controls:TabView.TabStartHeader>
                <Button x:ConnectionId='16'
                    x:Name="NewPlaylistButton"
                    Width="48"
                    Height="{StaticResource TabViewItemHeaderMinHeight}"
                    Background="Transparent"
                    Style="{StaticResource ButtonRevealStyle}"
                    ToolTipService.ToolTip="Create New Playlist">
                    <Button.Flyout>
                        <Flyout x:ConnectionId='17'
                            x:Name="NewPlaylistFlyout"
                                                             
                                                               >
                            <StackPanel>
                                <TextBox x:ConnectionId='18'
                                    x:Name="NewPlaylistNameTextBox"
                                    Grid.ColumnSpan="2"
                                    Width="360"
                                    Margin="20"
                                    BorderThickness="0"
                                    PlaceholderText="New Playlist Name" />
                                <TextBlock x:ConnectionId='19'
                                    x:Name="NamingErrorTextBox"
                                    Margin="20,-10,20,10"
                                    Foreground="Red"
                                    Visibility="Collapsed" />
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button x:ConnectionId='20'
                                        x:Name="CreateNewPlaylistButton"
                                        Grid.Row="1"
                                        Margin="10,0"
                                        Background="{ThemeResource SystemColorHighlightColor}"
                                                                             
                                        Content="Create New Playlist"
                                        Foreground="White" />
                                    <Button x:ConnectionId='21'
                                        x:Name="CancelNewPlaylistButton"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="10,0"
                                        Background="Transparent"
                                                                             
                                        Content="Cancel"
                                        Foreground="{ThemeResource SystemColorHighlightColor}" />
                                </StackPanel>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                    <Viewbox MaxWidth="16" MaxHeight="16">
                        <SymbolIcon Symbol="Add" />
                    </Viewbox>
                </Button>
            </controls:TabView.TabStartHeader>

            <controls:TabView.TabEndHeader>
                <Button x:ConnectionId='22'
                    x:Name="EditPlaylistButton"
                    Width="48"
                    Height="{StaticResource TabViewItemHeaderMinHeight}"
                    Margin="-1,0,0,0"
                    Background="Transparent"
                    BorderThickness="1"
                                                    
                    Content="&#xE70F;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Style="{StaticResource ButtonRevealStyle}"
                    ToolTipService.ToolTip="Edit Playlists" />
            </controls:TabView.TabEndHeader>

            <controls:TabView.Footer>
                <TextBlock x:ConnectionId='23'
                    x:Name="PlayListTabViewFooter"
                    Padding="16,8,16,8"
                    HorizontalAlignment="Right"
                    FontSize="16"
                    FontWeight="Bold" />
            </controls:TabView.Footer>
        </controls:TabView>
    </Grid>
</Page>

