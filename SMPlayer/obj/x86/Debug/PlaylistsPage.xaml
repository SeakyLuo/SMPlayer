<Page x:ConnectionId='1'
    x:Class="SMPlayer.PlaylistsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <Storyboard x:ConnectionId='2' x:Name="SpinArrowAnimation">
            <DoubleAnimation
                Storyboard.TargetName="UpArrowIcon"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                By="180"
                Duration="0:0:0.25" />
        </Storyboard>
    </Page.Resources>

    <Grid>
        <controls:TabView x:ConnectionId='3'
            x:Name="PlaylistTabView"
            AllowDrop="True"
            CanCloseTabs="False"
            CanDragItems="True"
            CanReorderItems="True"
                                                                   
            IsCloseButtonOverlay="False"
                                                         
            SelectedTabWidth="200"
                                                               
            SelectionMode="Single"
                                                   
            TabNavigation="Cycle"
            TabWidthBehavior="Actual">
            <controls:TabView.Resources>
                <x:Double x:Key="TabViewItemHeaderMinHeight">40</x:Double>
                <x:Double x:Key="TabViewItemHeaderMinWidth">48</x:Double>
                <x:Double x:Key="TabViewItemHeaderMaxWidth">200</x:Double>
            </controls:TabView.Resources>
            <controls:TabView.ItemHeaderTemplate>
                <DataTemplate                           >
                    <StackPanel x:ConnectionId='5' Orientation="Horizontal">
                        <StackPanel.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem x:ConnectionId='6'
                                                       
                                    Icon="Rename"
                                    Text="Rename PlayList" />
                                <MenuFlyoutItem x:ConnectionId='7'
                                                          
                                    Icon="Copy"
                                    Text="Duplicate PlayList" />
                                <MenuFlyoutItem x:ConnectionId='8'
                                                       
                                    Icon="Delete"
                                    Text="Delete PlayList" />
                            </MenuFlyout>
                        </StackPanel.ContextFlyout>
                        <SymbolIcon Symbol="Audio" />
                        <TextBlock x:ConnectionId='9'
                            x:Name="NameTextBlock"
                            Margin="10,0,5,0"
                                                              />
                    </StackPanel>
                </DataTemplate>
            </controls:TabView.ItemHeaderTemplate>
            <controls:TabView.ItemTemplate>
                <DataTemplate                           >
                    <local:PlaylistControl x:ConnectionId='11'
                        AllowReorder="False"
                        AlternatingRowColor="True"
                                                                 >
                        <local:PlaylistControl.Header>
                            <controls:ScrollHeader Mode="Sticky">
                                <Grid x:ConnectionId='12'
                                    x:Name="PlaylistInfoGrid"
                                    Padding="30"
                                    Background="#222222"
                                                                    
                                    RequestedTheme="Dark">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image x:ConnectionId='13'
                                        x:Name="PlaylistCover"
                                        Grid.RowSpan="4"
                                        Width="180"
                                        Height="180"
                                        Margin="0,0,20,0"
                                                                     
                                        Source="Assets/monotone_bg_wide.png" />
                                    <TextBlock x:ConnectionId='14'
                                        Grid.Column="1"
                                        FontSize="36"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                                                          />
                                    <TextBlock x:ConnectionId='15'
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0,5"
                                                                                                                          />
                                    <CommandBar
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Background="Transparent"
                                        DefaultLabelPosition="Right"
                                        Style="{StaticResource PlaylistCommandBarStyle}">
                                        <AppBarButton x:ConnectionId='16'
                                                                 
                                            Icon="Shuffle"
                                                                                                                                
                                            Label="Shuffle"
                                            Style="{StaticResource PlaylistAppBarButtonStyle}"
                                            ToolTipService.ToolTip="Shuffle Playlist" />
                                        <AppBarButton x:ConnectionId='17'
                                                               
                                            Icon="Add"
                                                                                                                                
                                            Label="Add To"
                                            Style="{StaticResource PlaylistAppBarButtonStyle}"
                                            ToolTipService.ToolTip="Add To Playlist" />
                                        <AppBarButton x:ConnectionId='18'
                                                                
                                            Icon="Rename"
                                            Label="Rename"
                                            Style="{StaticResource PlaylistAppBarButtonStyle}"
                                            ToolTipService.ToolTip="Rename Playlist" />
                                        <AppBarButton x:ConnectionId='19'
                                                                
                                            Icon="Delete"
                                            Label="Delete"
                                            Style="{StaticResource PlaylistAppBarButtonStyle}"
                                            ToolTipService.ToolTip="Delete Playlist" />
                                        <CommandBar.SecondaryCommands>
                                            <AppBarButton
                                                HorizontalAlignment="Stretch"
                                                Icon="Pin"
                                                Label="Pin to Start"
                                                ToolTipService.ToolTip="Pin Playlist to the Start Menu" />
                                            <AppBarSeparator />
                                            <AppBarToggleButton x:ConnectionId='20'
                                                                        
                                                                                                                                                                      
                                                Label="Sort By Name" />
                                            <AppBarToggleButton x:ConnectionId='21'
                                                                          
                                                                                                                                                                       
                                                Label="Sort By Artist" />
                                            <AppBarToggleButton x:ConnectionId='22'
                                                                         
                                                                                                                                                                      
                                                Label="Sort By Album" />
                                            <AppBarToggleButton x:ConnectionId='23'
                                                                            
                                                                                                                                                                         
                                                Label="Sort By Duration" />
                                            <AppBarToggleButton x:ConnectionId='24'
                                                                             
                                                                                                                                                                           
                                                Label="Sort By Play Count" />
                                        </CommandBar.SecondaryCommands>
                                    </CommandBar>
                                </Grid>
                            </controls:ScrollHeader>
                        </local:PlaylistControl.Header>
                    </local:PlaylistControl>
                </DataTemplate>
            </controls:TabView.ItemTemplate>

            <controls:TabView.TabStartHeader>
                <Button x:ConnectionId='25'
                    x:Name="NewPlaylistButton"
                    Width="48"
                    Height="{StaticResource TabViewItemHeaderMinHeight}"
                    Background="Transparent"
                                                   
                    Style="{StaticResource ButtonRevealStyle}"
                    ToolTipService.ToolTip="Create New Playlist">
                    <Viewbox MaxWidth="16" MaxHeight="16">
                        <SymbolIcon Symbol="Add" />
                    </Viewbox>
                </Button>
            </controls:TabView.TabStartHeader>

            <controls:TabView.TabEndHeader>
                <Button x:ConnectionId='26'
                    x:Name="EditPlaylistButton"
                    Width="48"
                    Height="{StaticResource TabViewItemHeaderMinHeight}"
                    Margin="-1,0,0,0"
                    Background="Transparent"
                    BorderThickness="1"
                                                    
                    Content="&#xE70F;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Style="{StaticResource ButtonRevealStyle}"
                    ToolTipService.ToolTip="Edit Playlists" />
            </controls:TabView.TabEndHeader>

            <controls:TabView.Footer>
                <local:IconTextButton x:ConnectionId='27'
                    x:Name="PlayListTabViewFooter"
                    Margin="0,5,10,5"
                    HorizontalAlignment="Right"
                    FontSize="16"
                    FontWeight="SemiBold"
                    LabelPosition="Left"
                    ToolTipService.ToolTip="Show All Playlists">
                    <local:IconTextButton.Icon>
                        <FontIcon x:ConnectionId='28'
                            x:Name="UpArrowIcon"
                            FontFamily="Segoe MDL2 Assets"
                                                                                  
                            Glyph="&#xE70E;"
                            RenderTransformOrigin=".5,.5">
                            <FontIcon.RenderTransform>
                                <RotateTransform />
                            </FontIcon.RenderTransform>
                        </FontIcon>
                    </local:IconTextButton.Icon>
                    <local:IconTextButton.Flyout>
                        <MenuFlyout x:ConnectionId='29'                                                             />
                    </local:IconTextButton.Flyout>
                </local:IconTextButton>
            </controls:TabView.Footer>
        </controls:TabView>
    </Grid>
</Page>

