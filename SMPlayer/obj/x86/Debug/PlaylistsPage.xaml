<Page
    x:Class="SMPlayer.PlaylistsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <controls:TabView x:ConnectionId='2'
            x:Name="PlaylistTabView"
            AllowDrop="True"
            CanCloseTabs="False"
            CanDragItems="True"
            CanReorderItems="True"
                                                                   
            IsCloseButtonOverlay="False"
            ItemsSource="{Binding Playlists, Mode=TwoWay}"
            SelectedTabWidth="200"
                                                               
            SelectionMode="Single"
                                                   
            TabNavigation="Cycle"
            TabWidthBehavior="Actual">
            <controls:TabView.Resources>
                <x:Double x:Key="TabViewItemHeaderMinHeight">40</x:Double>
                <x:Double x:Key="TabViewItemHeaderMinWidth">48</x:Double>
                <x:Double x:Key="TabViewItemHeaderMaxWidth">200</x:Double>
            </controls:TabView.Resources>
            <controls:TabView.ItemHeaderTemplate>
                <DataTemplate                           >
                    <StackPanel x:ConnectionId='4' Orientation="Horizontal">
                        <StackPanel.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem x:ConnectionId='5'
                                                       
                                    Icon="Rename"
                                    Text="Rename PlayList" />
                                <MenuFlyoutItem x:ConnectionId='6'
                                                          
                                    Icon="Copy"
                                    Text="Duplicate PlayList" />
                                <MenuFlyoutItem x:ConnectionId='7'
                                                       
                                    Icon="Delete"
                                    Text="Delete PlayList" />
                            </MenuFlyout>
                        </StackPanel.ContextFlyout>
                        <SymbolIcon Symbol="Audio" />
                        <TextBlock x:ConnectionId='8'
                            x:Name="NameTextBlock"
                            Margin="10,0,5,0"
                                                              />
                    </StackPanel>
                </DataTemplate>
            </controls:TabView.ItemHeaderTemplate>
            <controls:TabView.ItemTemplate>
                <DataTemplate                           >
                    <local:PlaylistControl x:ConnectionId='10'
                        AllowReorder="False"
                        AlternatingRowColor="True"
                                                                 >
                        <local:PlaylistControl.Header>
                            <controls:ScrollHeader Mode="Sticky">
                                <Grid x:ConnectionId='11'
                                    x:Name="PlaylistInfoGrid"
                                    Padding="36"
                                    Background="#222222"
                                                                    
                                    RequestedTheme="Dark">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image x:ConnectionId='12'
                                        x:Name="PlaylistCover"
                                        Grid.RowSpan="4"
                                        Width="180"
                                        Height="180"
                                                                     
                                        Margin="0,0,20,0" />
                                    <TextBlock x:ConnectionId='13'
                                        Grid.Column="1"
                                        FontSize="36"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                                                          />
                                    <TextBlock x:ConnectionId='14'
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0,5"
                                                                                                                          />
                                    <StackPanel
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Orientation="Horizontal">
                                        <StackPanel.Resources>
                                            <Style x:Key="Margin" TargetType="NavigationViewItem">
                                                <Setter Property="Margin" Value="5,0" />
                                                <Setter Property="Padding" Value="0,0,10,0" />
                                            </Style>
                                        </StackPanel.Resources>
                                        <NavigationViewItem x:ConnectionId='15'
                                            Margin="-5,0"
                                            Content="Shuffle"
                                            Icon="Shuffle"
                                                                                                                                
                                            Style="{StaticResource Margin}"
                                                                    />
                                        <NavigationViewItem x:ConnectionId='16'
                                            Content="Add To"
                                            Icon="Add"
                                                                                                                                
                                            Style="{StaticResource Margin}"
                                                                  />
                                        <NavigationViewItem x:ConnectionId='17'
                                            Content="Rename"
                                            Icon="Edit"
                                            Style="{StaticResource Margin}"
                                                                   />
                                        <NavigationViewItem x:ConnectionId='18'
                                            Content="Delete"
                                            Icon="Delete"
                                            Style="{StaticResource Margin}"
                                                                   />
                                        <NavigationViewItem x:ConnectionId='19'
                                            Content="More"
                                            Icon="More"
                                            Style="{StaticResource Margin}"
                                                                 />
                                    </StackPanel>
                                </Grid>
                            </controls:ScrollHeader>
                        </local:PlaylistControl.Header>
                    </local:PlaylistControl>
                </DataTemplate>
            </controls:TabView.ItemTemplate>

            <controls:TabView.TabStartHeader>
                <Button x:ConnectionId='20'
                    x:Name="NewPlaylistButton"
                    Width="48"
                    Height="{StaticResource TabViewItemHeaderMinHeight}"
                    Background="Transparent"
                                                   
                    Style="{StaticResource ButtonRevealStyle}"
                    ToolTipService.ToolTip="Create New Playlist">
                    <Viewbox MaxWidth="16" MaxHeight="16">
                        <SymbolIcon Symbol="Add" />
                    </Viewbox>
                </Button>
            </controls:TabView.TabStartHeader>

            <controls:TabView.TabEndHeader>
                <Button x:ConnectionId='21'
                    x:Name="EditPlaylistButton"
                    Width="48"
                    Height="{StaticResource TabViewItemHeaderMinHeight}"
                    Margin="-1,0,0,0"
                    Background="Transparent"
                    BorderThickness="1"
                                                    
                    Content="&#xE70F;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Style="{StaticResource ButtonRevealStyle}"
                    ToolTipService.ToolTip="Edit Playlists" />
            </controls:TabView.TabEndHeader>

            <controls:TabView.Footer>
                <TextBlock x:ConnectionId='22'
                    x:Name="PlayListTabViewFooter"
                    Padding="16,8,16,8"
                    HorizontalAlignment="Right"
                    FontSize="16"
                    FontWeight="SemiBold" />
            </controls:TabView.Footer>
        </controls:TabView>
    </Grid>
</Page>

