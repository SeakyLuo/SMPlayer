<Page x:ConnectionId='1'
    x:Class="SMPlayer.NowPlayingFullPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:Microsoft.Toolkit.Uwp.UI.Media"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        
    mc:Ignorable="d">

    <Grid>
        <Grid.Resources>
            <media:BackdropBlurBrush x:Key="AlbumBlurBrush" Amount="50" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image x:ConnectionId='2'
            x:Name="LargeAlbumCover"
            Grid.RowSpan="2"
            VerticalAlignment="Center"
                                                                             
            Stretch="UniformToFill" />
        <Grid Background="{StaticResource AlbumBlurBrush}">
            <local:MediaControl x:ConnectionId='4' x:Name="FullMediaControl" Mode="Full" />
        </Grid>
        <controls:BladeView Grid.Row="1" BladeMode="Fullscreen">
            <controls:BladeItem
                Background="{StaticResource AlbumBlurBrush}"
                BorderThickness="0"
                IsOpen="True"
                TitleBarVisibility="Collapsed">
                <Grid Background="Transparent">
                    <local:PlaylistControl x:ConnectionId='3'
                        x:Name="FullPlaylistControl"
                        Margin="10"
                        AlternatingRowColor="False"
                        Theme="Dark" />
                </Grid>
            </controls:BladeItem>
            <controls:BladeItem Background="Transparent" IsOpen="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!--<TextBlock Text="{x:Bind Name}" />-->
                </Grid>
            </controls:BladeItem>
        </controls:BladeView>
    </Grid>
</Page>

