<Page
    x:Class="SMPlayer.MusicLibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Music Library" />
        <RelativePanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" RelativePanel.AlignLeftWithPanel="True">
                <TextBlock Text="Song" Margin="20,10,10,10" />
                <TextBlock Text="Artist" Margin="10" />
                <TextBlock Text="Album" Margin="10" />
            </StackPanel>
            <Button
                Content="&#xE838;"
                RelativePanel.AlignRightWithPanel="True"
                VerticalAlignment="Center"
                FontSize="24"
                Margin="10,0,20,0"
                Style="{StaticResource FontIconButton}" />
        </RelativePanel>
    </Grid>
</Page>

