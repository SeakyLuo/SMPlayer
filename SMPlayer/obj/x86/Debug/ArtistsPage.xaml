<Page x:ConnectionId='1'
    x:Class="SMPlayer.ArtistsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='2'
            x:Name="MusicLibraryTitleTextBlock"
            Style="{StaticResource TitleTextBlockStyle}"
            Text="Artists" />
        <controls:MasterDetailsView x:ConnectionId='3'
            Grid.Row="1"
            BackButtonBehavior="Automatic"
            CompactModeThresholdWidth="720"
                                          >
            <controls:MasterDetailsView.MasterHeader>
                <ProgressRing x:ConnectionId='4'
                    x:Name="ArtistsProgressRing"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    IsActive="False"
                    Visibility="Collapsed" />
            </controls:MasterDetailsView.MasterHeader>
            <controls:MasterDetailsView.ItemTemplate>
                <DataTemplate                             >
                    <StackPanel x:ConnectionId='5' Margin="5" Orientation="Horizontal">
                        <Grid>
                            <Ellipse
                                Width="36"
                                Height="36"
                                Fill="Gray" />
                            <FontIcon Foreground="White" Glyph="&#xE8D4;" />
                        </Grid>
                        <TextBlock x:ConnectionId='6'
                            Margin="10"
                                                
                            TextAlignment="Start" />
                    </StackPanel>
                </DataTemplate>
            </controls:MasterDetailsView.ItemTemplate>
            <controls:MasterDetailsView.DetailsTemplate>
                <DataTemplate                             >
                    <Grid x:ConnectionId='7'>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <RelativePanel>
                            <StackPanel Margin="15,10,0,10" RelativePanel.AlignLeftWithPanel="True">
                                <TextBlock x:ConnectionId='13'
                                    Margin="0,0,0,5"
                                    FontSize="24"
                                    FontWeight="Bold"
                                                         />
                                <TextBlock FontSize="18" Text="Albums Songs" />
                            </StackPanel>
                            <SymbolIcon
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource SystemColorHighlightColor}"
                                RelativePanel.AlignRightWithPanel="True"
                                Symbol="More" />
                            <Border
                                Width="100"
                                Height="1"
                                BorderThickness="1"
                                RelativePanel.AlignBottomWithPanel="True" />
                        </RelativePanel>
                        <ListView x:ConnectionId='8'
                            Grid.Row="1"
                                                         
                            SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate                            >
                                    <Grid x:ConnectionId='9'>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <StackPanel Orientation="Horizontal">
                                            <controls:ImageEx x:ConnectionId='11'
                                                x:Name="AlbumCover"
                                                Width="60"
                                                Height="60"
                                                Margin="10"
                                                                        />
                                            <TextBlock x:ConnectionId='12'
                                                VerticalAlignment="Center"
                                                FontWeight="Bold"
                                                                     />
                                        </StackPanel>
                                        <ListView x:ConnectionId='10'
                                            Grid.Row="1"
                                                                        
                                            SelectionMode="Single">
                                            <!--<ListView.ItemTemplate>
                                            <DataTemplate x:DataType="data:Music">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{x:Bind Name}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>-->
                                        </ListView>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </DataTemplate>
            </controls:MasterDetailsView.DetailsTemplate>
        </controls:MasterDetailsView>
    </Grid>
</Page>

