<Page x:ConnectionId='1'
    x:Class="SMPlayer.ArtistsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='2'
            x:Name="MusicLibraryTitleTextBlock"
            Style="{StaticResource TitleTextBlockStyle}"
            Text="Artists" />
        <controls:MasterDetailsView x:ConnectionId='3'
            x:Name="ArtistMasterDetailsView"
            Grid.Row="1"
            BackButtonBehavior="Automatic"
            CompactModeThresholdWidth="720"
                                          >
            <controls:MasterDetailsView.MasterHeader>
                <RelativePanel Margin="10,0,5,10">
                    <TextBlock x:ConnectionId='4'
                        x:Name="ArtistsCountTextBlock"
                        FontSize="16"
                        RelativePanel.AlignLeftWithPanel="True"
                        Text="All Artists" />
                    <ProgressRing x:ConnectionId='5'
                        x:Name="ArtistsProgressRing"
                        IsActive="False"
                        RelativePanel.AlignRightWithPanel="True" />
                </RelativePanel>
            </controls:MasterDetailsView.MasterHeader>
            <controls:MasterDetailsView.ItemTemplate>
                <DataTemplate                             >
                    <StackPanel x:ConnectionId='6' Margin="5" Orientation="Horizontal">
                        <Grid>
                            <Ellipse
                                Width="36"
                                Height="36"
                                Fill="DarkGray" />
                            <FontIcon Foreground="White" Glyph="&#xE8D4;" />
                        </Grid>
                        <TextBlock x:ConnectionId='7'
                            x:Name="ArtistNameTextBlock"
                            Margin="10"
                                                
                            TextAlignment="Start" />
                    </StackPanel>
                </DataTemplate>
            </controls:MasterDetailsView.ItemTemplate>
            <controls:MasterDetailsView.DetailsTemplate>
                <DataTemplate                             >
                    <Grid x:ConnectionId='8'>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <RelativePanel HorizontalAlignment="Stretch">
                            <StackPanel
                                Margin="20,10,0,20"
                                VerticalAlignment="Center"
                                RelativePanel.AlignLeftWithPanel="True">
                                <TextBlock x:ConnectionId='19'
                                    Margin="0,0,0,10"
                                    FontSize="24"
                                    FontWeight="Bold"
                                                         />
                                <TextBlock x:ConnectionId='20'
                                    x:Name="ArtistInfoTextBlock"
                                    FontSize="18"
                                                                                                                />
                            </StackPanel>
                            <Grid
                                Margin="36,12"
                                VerticalAlignment="Center"
                                RelativePanel.AlignRightWithPanel="True">
                                <Ellipse
                                    Width="36"
                                    Height="36"
                                    Fill="{ThemeResource SystemColorHighlightColor}" />
                                <SymbolIcon
                                    VerticalAlignment="Center"
                                    Foreground="{ThemeResource AppBarBackgroundThemeBrush}"
                                    Symbol="More" />
                            </Grid>
                            <Border
                                Width="1000"
                                Height="1"
                                Margin="80,0,80,0"
                                HorizontalAlignment="Stretch"
                                BorderBrush="WhiteSmoke"
                                BorderThickness="2"
                                RelativePanel.AlignBottomWithPanel="True" />
                        </RelativePanel>
                        <ListView x:ConnectionId='9'
                            x:Name="AlbumsListView"
                            Grid.Row="1"
                            HorizontalAlignment="Stretch"
                                                         
                            SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate                            >
                                    <Grid x:ConnectionId='10' Margin="10,0,0,30">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <RelativePanel>
                                            <controls:ImageEx x:ConnectionId='16'
                                                x:Name="AlbumCover"
                                                Width="80"
                                                Height="80"
                                                Margin="10"
                                                RelativePanel.AlignLeftWithPanel="True"
                                                                       
                                                Style="{StaticResource CachedImageStyle}" />
                                            <StackPanel
                                                Margin="0,10"
                                                RelativePanel.LeftOf="AlbumMoreButton"
                                                RelativePanel.RightOf="AlbumCover">
                                                <TextBlock x:ConnectionId='17'
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    FontWeight="Bold"
                                                                         />
                                                <TextBlock x:ConnectionId='18'
                                                    x:Name="SongCountTextBlock"
                                                    Margin="0,10"
                                                                                                                         />
                                            </StackPanel>
                                            <Button
                                                x:Name="AlbumMoreButton"
                                                Margin="0,40,20,0"
                                                Background="Transparent"
                                                Content="&#xE712;"
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="18"
                                                Foreground="{ThemeResource SystemColorHighlightColor}"
                                                RelativePanel.AlignRightWithPanel="True">
                                                <Button.Flyout>
                                                    <MenuFlyout>
                                                        <MenuFlyoutItem Icon="Add" Text="Add To Now Playing" />
                                                        <MenuFlyoutItem Icon="Shuffle" Text="Shuffle Album" />
                                                    </MenuFlyout>
                                                </Button.Flyout>
                                            </Button>
                                        </RelativePanel>
                                        <ListView x:ConnectionId='11'
                                            x:Name="SongsListView"
                                            Grid.Row="1"
                                            HorizontalAlignment="Stretch"
                                                                                                             
                                            IsItemClickEnabled="True"
                                                                               
                                                                        
                                            SelectionMode="Single">
                                            <ListView.ItemTemplate>
                                                <DataTemplate                         >
                                                    <Grid x:ConnectionId='12' Margin="12,0,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.ContextFlyout>
                                                            <MenuFlyout>
                                                                <MenuFlyoutItem x:ConnectionId='13'
                                                                    x:Name="PlayItem"
                                                                                          
                                                                    Icon="Play"
                                                                    Text="Play" />
                                                                <MenuFlyoutSubItem
                                                                    x:Name="AddToPlaylistsItem"
                                                                    Icon="Add"
                                                                    Text="Add To Playlists">
                                                                    <MenuFlyoutItem Text="Create New Playlist" />
                                                                    <MenuFlyoutSeparator />
                                                                    <MenuFlyoutItem Icon="List" Text="My Favorites" />
                                                                </MenuFlyoutSubItem>
                                                                <MenuFlyoutItem
                                                                    x:Name="DeleteItem"
                                                                    Icon="Delete"
                                                                    Text="Delete From Disk" />
                                                                <MenuFlyoutItem
                                                                    x:Name="MusicInfoItem"
                                                                    Icon="MusicInfo"
                                                                    Text="Music Info" />
                                                            </MenuFlyout>
                                                        </Grid.ContextFlyout>
                                                        <StackPanel
                                                            x:Name="HeaderPanel"
                                                            MaxWidth="720"
                                                            Orientation="Horizontal">
                                                            <FontIcon
                                                                x:Name="PlayingIcon"
                                                                Margin="0,0,16,0"
                                                                FontFamily="Segoe MDL2 Assets"
                                                                Foreground="{StaticResource SystemColorHighlightColor}"
                                                                Glyph="&#xE767;"
                                                                RelativePanel.AlignLeftWithPanel="True"
                                                                Visibility="{Binding Name, Converter={StaticResource MusicVisibilityConverter}}" />
                                                            <TextBlock x:ConnectionId='15'
                                                                x:Name="MusicNameTextBlcok"
                                                                Grid.Column="1"
                                                                Width="720"
                                                                                     />
                                                        </StackPanel>
                                                        <TextBlock x:ConnectionId='14'
                                                            Grid.Column="2"
                                                            Margin="10,0,10,0"
                                                                                                                                        />
                                                        <VisualStateManager.VisualStateGroups>
                                                            <VisualStateGroup x:Name="WidthChangeVisualStateGroup">
                                                                <VisualState x:Name="Wide">
                                                                    <VisualState.StateTriggers>
                                                                        <AdaptiveTrigger MinWindowWidth="1200" />
                                                                    </VisualState.StateTriggers>
                                                                    <VisualState.Setters>
                                                                        <Setter Target="HeaderPanel.MusicNameTextBlock.Width" Value="600" />
                                                                    </VisualState.Setters>
                                                                </VisualState>
                                                            </VisualStateGroup>
                                                        </VisualStateManager.VisualStateGroups>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </DataTemplate>
            </controls:MasterDetailsView.DetailsTemplate>
            <controls:MasterDetailsView.NoSelectionContent>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <SymbolIcon RenderTransformOrigin=".5,.5" Symbol="MusicInfo">
                        <SymbolIcon.RenderTransform>
                            <CompositeTransform ScaleX="2" ScaleY="2" />
                        </SymbolIcon.RenderTransform>
                    </SymbolIcon>
                    <TextBlock
                        Margin="0,24"
                        FontSize="24"
                        Text="Select an Artist" />
                </StackPanel>
            </controls:MasterDetailsView.NoSelectionContent>
        </controls:MasterDetailsView>
    </Grid>
</Page>

