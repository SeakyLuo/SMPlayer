<Page x:ConnectionId='1'
    x:Class="SMPlayer.ArtistsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="StretchingListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="0" />
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock x:ConnectionId='2'
            x:Name="MusicLibraryTitleTextBlock"
            Style="{StaticResource TitleTextBlockStyle}"
            Text="Artists" />
        <controls:MasterDetailsView x:ConnectionId='3'
            x:Name="ArtistMasterDetailsView"
            Grid.Row="1"
            BackButtonBehavior="Automatic"
            CompactModeThresholdWidth="720"
            ItemContainerStyle="{StaticResource StretchingListViewItemStyle}"
                                                       >
            <controls:MasterDetailsView.MasterHeader>
                <Grid Margin="10,0,5,10">
                    <TextBlock x:ConnectionId='4'
                        x:Name="ArtistsCountTextBlock"
                        VerticalAlignment="Center"
                        FontSize="16"
                        TextAlignment="Left" />
                    <ProgressBar x:ConnectionId='5'
                        x:Name="ArtistProgressBar"
                        VerticalAlignment="Center"
                        IsIndeterminate="True" />
                </Grid>
            </controls:MasterDetailsView.MasterHeader>
            <controls:MasterDetailsView.ItemTemplate>
                <DataTemplate                             >
                    <StackPanel x:ConnectionId='7'
                        Padding="15,5"
                        HorizontalAlignment="Stretch"
                        Background="Transparent"
                        Orientation="Horizontal">
                        <StackPanel.ContextFlyout>
                            <MenuFlyout x:ConnectionId='8'                                  />
                        </StackPanel.ContextFlyout>
                        <Grid>
                            <Ellipse
                                Width="36"
                                Height="36"
                                Fill="DarkGray" />
                            <FontIcon Foreground="White" Glyph="&#xE8D4;" />
                        </Grid>
                        <TextBlock x:ConnectionId='9'
                            x:Name="ArtistNameTextBlock"
                            Margin="10"
                                                
                            TextAlignment="Start" />
                    </StackPanel>
                </DataTemplate>
            </controls:MasterDetailsView.ItemTemplate>
            <controls:MasterDetailsView.DetailsTemplate>
                <DataTemplate                             >
                    <Grid x:ConnectionId='11'>
                        <Grid.Resources>
                            <Style x:Key="MoreButtonStyle" TargetType="Button">
                                <Setter Property="Width" Value="40" />
                                <Setter Property="Height" Value="40" />
                                <Setter Property="Content" Value="&#xE712;" />
                                <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
                                <Setter Property="FontSize" Value="18" />
                                <Setter Property="CornerRadius" Value="20" />
                            </Style>
                        </Grid.Resources>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <RelativePanel>
                            <StackPanel
                                Margin="20,10,0,20"
                                VerticalAlignment="Center"
                                RelativePanel.AlignLeftWithPanel="True">
                                <TextBlock x:ConnectionId='29'
                                    Margin="0,0,0,10"
                                    FontSize="24"
                                    FontWeight="Bold"
                                                         />
                                <TextBlock x:ConnectionId='30'
                                    x:Name="ArtistInfoTextBlock"
                                    FontSize="18"
                                                                                                                />
                            </StackPanel>
                            <Button
                                Margin="36,12"
                                Background="{ThemeResource SystemColorHighlightColor}"
                                Foreground="{ThemeResource AppBarBackgroundThemeBrush}"
                                RelativePanel.AlignRightWithPanel="True"
                                Style="{StaticResource MoreButtonStyle}">
                                <Button.Flyout>
                                    <MenuFlyout x:ConnectionId='28'                                  />
                                </Button.Flyout>
                            </Button>
                            <Border
                                Width="1000"
                                Height="1"
                                Margin="80,0,80,0"
                                HorizontalAlignment="Stretch"
                                BorderBrush="WhiteSmoke"
                                BorderThickness="2"
                                RelativePanel.AlignBottomWithPanel="True" />
                        </RelativePanel>
                        <ListView x:ConnectionId='12'
                            x:Name="AlbumsListView"
                            Grid.Row="1"
                            HorizontalAlignment="Stretch"
                                                                      
                            SelectionMode="None">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="0" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate                            >
                                    <Grid x:ConnectionId='14' Margin="15,0,15,30">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <RelativePanel>
                                            <Image x:ConnectionId='23'
                                                x:Name="AlbumCover"
                                                Width="80"
                                                Height="80"
                                                Margin="10"
                                                RelativePanel.AlignLeftWithPanel="True"
                                                                        />
                                            <StackPanel
                                                Margin="0,10"
                                                RelativePanel.LeftOf="AlbumMoreButton"
                                                RelativePanel.RightOf="AlbumCover">
                                                <TextBlock x:ConnectionId='26'
                                                    VerticalAlignment="Center"
                                                    FontSize="18"
                                                    FontWeight="Bold"
                                                                         />
                                                <TextBlock x:ConnectionId='27'
                                                    x:Name="SongCountTextBlock"
                                                    Margin="0,10"
                                                                                                                                      />
                                            </StackPanel>
                                            <Button
                                                x:Name="AlbumMoreButton"
                                                Margin="0,40,20,0"
                                                Background="Transparent"
                                                Foreground="{ThemeResource SystemColorHighlightColor}"
                                                RelativePanel.AlignRightWithPanel="True"
                                                Style="{StaticResource MoreButtonStyle}">
                                                <Button.Flyout>
                                                    <MenuFlyout x:ConnectionId='25'                                  />
                                                </Button.Flyout>
                                            </Button>
                                        </RelativePanel>
                                        <ListView x:ConnectionId='15'
                                            x:Name="SongsListView"
                                            Grid.Row="1"
                                                                                                             
                                            IsItemClickEnabled="True"
                                                                               
                                            ItemContainerStyle="{StaticResource StretchingListViewItemStyle}"
                                                                                     
                                            SelectionMode="None">
                                            <ListView.ItemTemplate>
                                                <DataTemplate                        >
                                                    <Grid x:ConnectionId='17' Margin="12,0,0,0" Background="Transparent">
                                                        <Grid.ContextFlyout>
                                                            <MenuFlyout x:ConnectionId='18'                               />
                                                        </Grid.ContextFlyout>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel x:Name="HeaderPanel" Orientation="Horizontal">
                                                            <FontIcon x:ConnectionId='21'
                                                                x:Name="PlayingIcon"
                                                                Margin="0,0,16,0"
                                                                FontFamily="Segoe MDL2 Assets"
                                                                Foreground="{StaticResource SystemColorHighlightColor}"
                                                                Glyph="&#xE767;"
                                                                RelativePanel.AlignLeftWithPanel="True"
                                                                                                                                                             />
                                                            <TextBlock x:ConnectionId='22'
                                                                x:Name="MusicNameTextBlcok"
                                                                Grid.Column="1"
                                                                                                                                                          
                                                                                     />
                                                        </StackPanel>
                                                        <TextBlock x:ConnectionId='20'
                                                            Grid.Column="2"
                                                            Margin="10,0,15,0"
                                                                                                                                                      
                                                                                                                                        />
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </DataTemplate>
            </controls:MasterDetailsView.DetailsTemplate>
            <controls:MasterDetailsView.NoSelectionContent>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <SymbolIcon RenderTransformOrigin=".5,.5" Symbol="MusicInfo">
                        <SymbolIcon.RenderTransform>
                            <CompositeTransform ScaleX="2" ScaleY="2" />
                        </SymbolIcon.RenderTransform>
                    </SymbolIcon>
                    <TextBlock
                        Margin="0,24"
                        FontSize="24"
                        Text="Select an Artist" />
                </StackPanel>
            </controls:MasterDetailsView.NoSelectionContent>
        </controls:MasterDetailsView>
    </Grid>
</Page>

