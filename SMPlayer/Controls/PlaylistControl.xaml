<UserControl
    x:Class="SMPlayer.PlaylistControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="PlaylistController"
    Loaded="PlaylistController_Loaded"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="SelectedPointerOverBackground" TargetType="ListViewItemPresenter">
            <Setter Property="SelectedPointerOverBackground" Value="White" />
        </Style>
    </UserControl.Resources>

    <ListView
        x:Name="SongsListView"
        Grid.Row="1"
        AllowDrop="True"
        CanDrag="True"
        CanReorderItems="True"
        ContainerContentChanging="SongsListView_ContainerContentChanging"
        DragItemsStarting="SongsListView_DragItemsStarting"
        DropCompleted="SongsListView_DropCompleted"
        IsItemClickEnabled="True"
        ItemClick="SongsListView_ItemClick"
        ItemTemplate="{StaticResource MusicListViewTemplate}"
        ItemsSource="{Binding Songs, Mode=TwoWay}"
        ReorderMode="Enabled"
        SelectionMode="None">
        <ListView.ItemContainerStyle>
            <Style TargetType="ListViewItem">
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                <Setter Property="ContextFlyout">
                    <Setter.Value>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                x:Name="PlayItem"
                                Click="PlayItem_Click"
                                Icon="Play"
                                Text="Play" />
                            <MenuFlyoutSubItem
                                x:Name="AddToPlaylistsItem"
                                Icon="Add"
                                Text="Add To Playlists">
                                <MenuFlyoutItem Text="Create New Playlist" />
                                <MenuFlyoutSeparator />
                                <MenuFlyoutItem Icon="List" Text="My Favorites" />
                            </MenuFlyoutSubItem>
                            <MenuFlyoutItem
                                x:Name="DeleteItem"
                                Click="DeleteItem_Click"
                                Icon="Delete"
                                Text="Remove From PlayList" />
                            <MenuFlyoutItem
                                x:Name="MusicInfoItem"
                                Icon="MusicInfo"
                                Text="Music Info" />
                            <MenuFlyoutItem
                                x:Name="MoveToTopItem"
                                Click="MoveToTopItem_Click"
                                Icon="Upload"
                                Text="Move To Top" />
                        </MenuFlyout>
                    </Setter.Value>
                </Setter>
            </Style>
        </ListView.ItemContainerStyle>
    </ListView>
</UserControl>
