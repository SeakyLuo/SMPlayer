<Page
    x:Class="SMPlayer.PlaylistsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <controls:TabView
            x:Name="Tabs"
            AllowDrop="True"
            CanCloseTabs="False"
            CanDragItems="True"
            CanReorderItems="True"
            IsCloseButtonOverlay="False"
            ItemsSource="{x:Bind Playlists}"
            SelectedTabWidth="200"
            TabWidthBehavior="Actual">
            <controls:TabView.Resources>
                <x:Double x:Key="TabViewItemHeaderMinHeight">40</x:Double>
                <x:Double x:Key="TabViewItemHeaderMinWidth">48</x:Double>
                <x:Double x:Key="TabViewItemHeaderMaxWidth">200</x:Double>
            </controls:TabView.Resources>
            <controls:TabView.ItemTemplate>
                <DataTemplate x:DataType="data:Playlist">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Padding="16">It has a lot of versitility out of the box for different scenarios.</TextBlock>
                    </Grid>
                </DataTemplate>
            </controls:TabView.ItemTemplate>
            <controls:TabView.TabStartHeader>
                <Button
                    Width="48"
                    Height="{StaticResource TabViewItemHeaderMinHeight}"
                    Background="Transparent"
                    Style="{StaticResource ButtonRevealStyle}">
                    <Viewbox MaxWidth="16" MaxHeight="16">
                        <SymbolIcon Symbol="Add" />
                    </Viewbox>
                </Button>
            </controls:TabView.TabStartHeader>

            <controls:TabViewItem Header="PlayList" Icon="Audio">
                <controls:TabViewItem.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem
                            Click="DuplicateClick"
                            Icon="Copy"
                            Text="Duplicate PlayList" />
                        <MenuFlyoutItem
                            Click="DeleteClick"
                            Icon="Delete"
                            Text="Delete PlayList" />
                    </MenuFlyout>
                </controls:TabViewItem.ContextFlyout>
            </controls:TabViewItem>

            <controls:TabView.TabEndHeader>
                <Button
                    Width="48"
                    Height="{StaticResource TabViewItemHeaderMinHeight}"
                    Margin="-1,0,0,0"
                    Background="Transparent"
                    BorderThickness="1"
                    Style="{StaticResource ButtonRevealStyle}">
                    <Viewbox MaxWidth="16" MaxHeight="16">
                        <SymbolIcon Symbol="Setting" />
                    </Viewbox>
                </Button>
            </controls:TabView.TabEndHeader>

            <controls:TabView.Footer>
                <TextBlock
                    x:Name="PlayListTabViewFooter"
                    Padding="16,8,16,8"
                    HorizontalAlignment="Right"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="" />
            </controls:TabView.Footer>
        </controls:TabView>
    </Grid>
</Page>
