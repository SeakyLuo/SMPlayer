<Page
    x:Class="SMPlayer.PlaylistsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <controls:TabView
            x:Name="PlaylistTabView"
            AllowDrop="True"
            CanCloseTabs="False"
            CanDragItems="True"
            CanReorderItems="True"
            DragItemsStarting="PlaylistTabView_DragItemsStarting"
            DropCompleted="PlaylistTabView_DropCompleted"
            IsCloseButtonOverlay="False"
            ItemsSource="{x:Bind Playlists, Mode=TwoWay}"
            SelectedTabWidth="200"
            SelectionChanged="PlaylistTabView_SelectionChanged"
            SelectionMode="Single"
            TabClosing="PlaylistTabView_TabClosing"
            TabNavigation="Cycle"
            TabWidthBehavior="Actual">
            <controls:TabView.Resources>
                <x:Double x:Key="TabViewItemHeaderMinHeight">40</x:Double>
                <x:Double x:Key="TabViewItemHeaderMinWidth">48</x:Double>
                <x:Double x:Key="TabViewItemHeaderMaxWidth">200</x:Double>
            </controls:TabView.Resources>
            <controls:TabView.ItemHeaderTemplate>
                <DataTemplate x:DataType="data:Playlist">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    Click="RenameClick"
                                    Icon="Rename"
                                    Text="Rename PlayList" />
                                <MenuFlyoutItem
                                    Click="DuplicateClick"
                                    Icon="Copy"
                                    Text="Duplicate PlayList" />
                                <MenuFlyoutItem
                                    Click="DeleteClick"
                                    Icon="Delete"
                                    Text="Delete PlayList" />
                            </MenuFlyout>
                        </StackPanel.ContextFlyout>
                        <SymbolIcon Symbol="Audio" />
                        <TextBlock
                            x:Name="NameTextBlock"
                            Margin="10,0,5,0"
                            Text="{x:Bind Name, Mode=OneWay}" />
                    </StackPanel>
                </DataTemplate>
            </controls:TabView.ItemHeaderTemplate>
            <controls:TabView.ItemTemplate>
                <DataTemplate x:DataType="data:Playlist">
                    <ListView ItemTemplate="{StaticResource MusicListViewTemplate}" ItemsSource="{x:Bind Songs}">
                        <ListView.Header>
                            <controls:ScrollHeader Mode="Sticky">
                                <Grid
                                    x:Name="PlaylistInfoGrid"
                                    Padding="36"
                                    Background="#222222"
                                    Loaded="PlaylistInfoGrid_Loaded"
                                    RequestedTheme="Dark">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image
                                        x:Name="PlaylistCover"
                                        Grid.RowSpan="4"
                                        Width="180"
                                        Height="180"
                                        Margin="0,0,20,0" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Style="{StaticResource HeaderTextBlockStyle}"
                                        Text="{x:Bind Name, Mode=OneWay}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="0,5"
                                        Text="{x:Bind Songs, Converter={StaticResource SongCountConverter}}" />
                                    <StackPanel
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Orientation="Horizontal">
                                        <NavigationViewItem
                                            Margin="5,0"
                                            Padding="0,0,10,0"
                                            Content="Shuffle"
                                            Icon="Shuffle" />
                                        <NavigationViewItem
                                            Margin="5,0"
                                            Padding="0,0,10,0"
                                            Content="Add To"
                                            Icon="Add" />
                                        <NavigationViewItem
                                            Margin="5,0"
                                            Padding="0,0,10,0"
                                            Content="Rename"
                                            Icon="Edit" />
                                        <NavigationViewItem
                                            Margin="5,0"
                                            Padding="0,0,10,0"
                                            Content="Delete"
                                            Icon="Delete" />
                                    </StackPanel>
                                </Grid>
                            </controls:ScrollHeader>
                        </ListView.Header>
                    </ListView>
                </DataTemplate>
            </controls:TabView.ItemTemplate>

            <controls:TabView.TabStartHeader>
                <Button
                    x:Name="NewPlaylistButton"
                    Width="48"
                    Height="{StaticResource TabViewItemHeaderMinHeight}"
                    Background="Transparent"
                    Click="NewPlaylistButton_Click"
                    Style="{StaticResource ButtonRevealStyle}"
                    ToolTipService.ToolTip="Create New Playlist">
                    <Viewbox MaxWidth="16" MaxHeight="16">
                        <SymbolIcon Symbol="Add" />
                    </Viewbox>
                </Button>
            </controls:TabView.TabStartHeader>

            <controls:TabView.TabEndHeader>
                <Button
                    x:Name="EditPlaylistButton"
                    Width="48"
                    Height="{StaticResource TabViewItemHeaderMinHeight}"
                    Margin="-1,0,0,0"
                    Background="Transparent"
                    BorderThickness="1"
                    Click="EditPlaylistButton_Click"
                    Content="&#xE70F;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Style="{StaticResource ButtonRevealStyle}"
                    ToolTipService.ToolTip="Edit Playlists" />
            </controls:TabView.TabEndHeader>

            <controls:TabView.Footer>
                <TextBlock
                    x:Name="PlayListTabViewFooter"
                    Padding="16,8,16,8"
                    HorizontalAlignment="Right"
                    FontSize="16"
                    FontWeight="Bold" />
            </controls:TabView.Footer>
        </controls:TabView>
    </Grid>
</Page>
