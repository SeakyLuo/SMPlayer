<Page
    x:Class="SMPlayer.PlaylistsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <controls:TabView
            x:Name="PlaylistTabView"
            AllowDrop="True"
            CanCloseTabs="False"
            CanDragItems="True"
            CanReorderItems="True"
            DragItemsStarting="PlaylistTabView_DragItemsStarting"
            DropCompleted="PlaylistTabView_DropCompleted"
            IsCloseButtonOverlay="False"
            ItemsSource="{x:Bind Playlists, Mode=TwoWay}"
            SelectedTabWidth="200"
            TabWidthBehavior="Actual">
            <controls:TabView.Resources>
                <x:Double x:Key="TabViewItemHeaderMinHeight">40</x:Double>
                <x:Double x:Key="TabViewItemHeaderMinWidth">48</x:Double>
                <x:Double x:Key="TabViewItemHeaderMaxWidth">200</x:Double>
            </controls:TabView.Resources>
            <controls:TabView.ItemHeaderTemplate>
                <DataTemplate x:DataType="data:Playlist">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    Click="DuplicateClick"
                                    Icon="Copy"
                                    Text="Duplicate PlayList" />
                                <MenuFlyoutItem
                                    Click="DeleteClick"
                                    Icon="Delete"
                                    Text="Delete PlayList" />
                            </MenuFlyout>
                        </Grid.ContextFlyout>
                        <SymbolIcon Symbol="Audio" />
                        <TextBlock Grid.Column="1" Text="{x:Bind Name, Mode=TwoWay}" />
                    </Grid>
                </DataTemplate>
            </controls:TabView.ItemHeaderTemplate>
            <controls:TabView.ItemTemplate>
                <DataTemplate x:DataType="data:Playlist">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Padding="16">It has a lot of versitility out of the box for different scenarios.</TextBlock>
                    </Grid>
                </DataTemplate>
            </controls:TabView.ItemTemplate>

            <controls:TabView.TabStartHeader>
                <Button
                    x:Name="NewPlaylistButton"
                    Width="48"
                    Height="{StaticResource TabViewItemHeaderMinHeight}"
                    Background="Transparent"
                    Style="{StaticResource ButtonRevealStyle}">
                    <Button.Flyout>
                        <Flyout x:Name="NewPlaylistFlyout">
                            <StackPanel>
                                <TextBox
                                    x:Name="NewPlaylistNameTextBox"
                                    Grid.ColumnSpan="2"
                                    Width="360"
                                    Margin="20"
                                    BorderThickness="0"
                                    PlaceholderText="New Playlist Name" />
                                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button
                                        x:Name="CreateaNewPlaylistButton"
                                        Grid.Row="1"
                                        Margin="10,0"
                                        Background="{ThemeResource SystemColorHighlightColor}"
                                        Click="CreateaNewPlaylistButton_Click"
                                        Content="Create New Playlist"
                                        Foreground="White" />
                                    <Button
                                        x:Name="CancelNewPlaylistButton"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="10,0"
                                        Background="Transparent"
                                        Click="CancelNewPlaylistButton_Click"
                                        Content="Cancel"
                                        Foreground="{ThemeResource SystemColorHighlightColor}" />
                                </StackPanel>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                    <Viewbox MaxWidth="16" MaxHeight="16">
                        <SymbolIcon Symbol="Add" />
                    </Viewbox>
                </Button>
            </controls:TabView.TabStartHeader>

            <controls:TabView.TabEndHeader>
                <Button
                    x:Name="EditPlaylistButton"
                    Width="48"
                    Height="{StaticResource TabViewItemHeaderMinHeight}"
                    Margin="-1,0,0,0"
                    Background="Transparent"
                    BorderThickness="1"
                    Click="EditPlaylistButton_Click"
                    Content="&#xE70F;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Style="{StaticResource ButtonRevealStyle}" />
            </controls:TabView.TabEndHeader>

            <controls:TabView.Footer>
                <TextBlock
                    x:Name="PlayListTabViewFooter"
                    Padding="16,8,16,8"
                    HorizontalAlignment="Right"
                    FontSize="16"
                    FontWeight="Bold" />
            </controls:TabView.Footer>
        </controls:TabView>
    </Grid>
</Page>
