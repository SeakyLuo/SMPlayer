<UserControl
    x:Class="SMPlayer.MediaControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>
        <Grid
            x:Name="MainMediaControlGrid"
            Grid.Row="1"
            Background="{ThemeResource SystemControlAcrylicElementBrush}"
            RequestedTheme="Dark"
            Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid
                x:Name="MainMusicInfoGrid"
                Grid.Column="0"
                Margin="0"
                HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image
                    x:Name="MainAlbumCover"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Width="100"
                    Height="100"
                    Source="Assets/monotone_bg_wide.png"
                    Stretch="UniformToFill" />
                <TextBlock
                    x:Name="MainTitleTextBlock"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="10,0,5,5"
                    VerticalAlignment="Bottom"
                    FontSize="24" />
                <TextBlock
                    x:Name="MainArtistTextBlock"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,5,5,0"
                    VerticalAlignment="Top"
                    FontSize="18"
                    FontWeight="Bold" />
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="PointerOver">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter" Storyboard.TargetProperty="Background">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonPointerOverBackgroundThemeBrush}" />
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Grid>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Click="PrevButton_Click"
                        Content="&#xE892;"
                        Style="{StaticResource MediaControlButtonStyle}"
                        Template="{StaticResource MediaControlButtonTemplate}"
                        ToolTipService.ToolTip="Previous" />
                    <Button
                        x:Name="MainPlayButton"
                        Width="48"
                        Height="48"
                        HorizontalAlignment="Center"
                        BorderBrush="{StaticResource MediaControlPlayButtonBorderBrush}"
                        Click="PlayButton_Click"
                        Content="&#xE768;"
                        CornerRadius="25"
                        FontSize="24"
                        Style="{StaticResource MediaControlButtonStyle}"
                        Template="{StaticResource MediaControlButtonTemplate}">
                        <Button.KeyboardAccelerators>
                            <KeyboardAccelerator Key="F3" />
                        </Button.KeyboardAccelerators>
                    </Button>
                    <Button
                        Click="NextButton_Click"
                        Content="&#xE893;"
                        Style="{StaticResource MediaControlButtonStyle}"
                        Template="{StaticResource MediaControlButtonTemplate}"
                        ToolTipService.ToolTip="Next" />
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        x:Name="MainLeftTimeTextBlock"
                        Margin="10,0,20,0"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI"
                        RelativePanel.AlignLeftWithPanel="True"
                        Text="0:00" />
                    <Slider
                        x:Name="MainMediaSlider"
                        Grid.Column="1"
                        IsThumbToolTipEnabled="True"
                        ManipulationCompleted="MediaSlider_ManipulationCompleted"
                        ManipulationMode="All"
                        ManipulationStarted="MediaSlider_ManipulationStarted"
                        ManipulationStarting="MediaSlider_ManipulationStarting"
                        Minimum="0"
                        RelativePanel.LeftOf="RightTimeTextBlock"
                        RelativePanel.RightOf="LeftTimeTextBlock"
                        Style="{StaticResource MediaProgressSliderStyle}"
                        ThumbToolTipValueConverter="{StaticResource MusicDurationConverter}"
                        ValueChanged="MediaSlider_ValueChanged" />
                    <TextBlock
                        x:Name="MainRightTimeTextBlock"
                        Grid.Column="2"
                        Margin="20,0,10,0"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI"
                        RelativePanel.AlignRightWithPanel="True" />
                </Grid>
            </StackPanel>
            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        x:Name="MainVolumeButton"
                        Click="VolumeButton_Click"
                        Content="&#xE15D;"
                        Style="{StaticResource MediaControlButtonStyle}"
                        Template="{StaticResource MediaControlButtonTemplate}" />
                    <Slider
                        x:Name="MainVolumeSlider"
                        Width="100"
                        Margin="10,0,20,0"
                        VerticalAlignment="Center"
                        Maximum="100"
                        Minimum="0"
                        Style="{StaticResource MediaProgressSliderStyle}"
                        ValueChanged="VolumeSlider_ValueChanged"
                        Value="50" />
                    <Button
                        x:Name="MainLikeButton"
                        Click="LikeButton_Click"
                        Content="&#xEB51;"
                        Style="{StaticResource MediaControlButtonStyle}"
                        Template="{StaticResource MediaControlButtonTemplate}" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <ToggleButton
                        x:Name="MainShuffleButton"
                        Click="ShuffleButton_Click"
                        Content="&#xE8B1;"
                        Style="{StaticResource MediaControlToggleButtonStyle}"
                        Template="{StaticResource MediaControlToggleButtonTemplate}" />
                    <ToggleButton
                        x:Name="MainRepeatButton"
                        Click="RepeatButton_Click"
                        Content="&#xE8EE;"
                        Style="{StaticResource MediaControlToggleButtonStyle}"
                        Template="{StaticResource MediaControlToggleButtonTemplate}" />
                    <ToggleButton
                        x:Name="MainRepeatOneButton"
                        Click="RepeatOneButton_Click"
                        Content="&#xE8ED;"
                        Style="{StaticResource MediaControlToggleButtonStyle}"
                        Template="{StaticResource MediaControlToggleButtonTemplate}" />
                    <Button
                        Content="&#xE712;"
                        Style="{StaticResource MediaControlButtonStyle}"
                        Template="{StaticResource MediaControlButtonTemplate}"
                        ToolTipService.ToolTip="More">
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutSubItem Icon="Add" Text="Add To Playlist" />
                                <MenuFlyoutItem Icon="Fullscreen" Text="Full Window" />
                                <MenuFlyoutItem Icon="MusicInfo" Text="Music Info" />
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid
            x:Name="FullMediaControlGrid"
            Background="Black"
            Opacity="0.75"
            RequestedTheme="Dark"
            Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Margin="20" HorizontalAlignment="Left">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        x:Name="FullAlbumCover"
                        Grid.RowSpan="3"
                        Width="120"
                        Height="120"
                        Source="Assets/colorful_bg_wide.png"
                        Stretch="UniformToFill" />
                    <TextBlock
                        x:Name="FullTitleTextBlock"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="10,0,5,5"
                        FontSize="24"
                        FontWeight="Bold" />
                    <TextBlock
                        x:Name="FullArtistTextBlock"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="10,5,5,0"
                        FontSize="18" />
                    <TextBlock
                        x:Name="FullAlbumTextBlock"
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="10,5,5,0"
                        FontSize="18" />
                </Grid>

                <Grid
                    Grid.Row="1"
                    Margin="10,0"
                    VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        x:Name="FullLeftTimeTextBlock"
                        Margin="10,0,20,0"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI"
                        RelativePanel.AlignLeftWithPanel="True"
                        Text="0:00" />
                    <Slider
                        x:Name="FullMediaSlider"
                        Grid.Column="1"
                        IsThumbToolTipEnabled="True"
                        ManipulationCompleted="MediaSlider_ManipulationCompleted"
                        ManipulationMode="All"
                        ManipulationStarted="MediaSlider_ManipulationStarted"
                        ManipulationStarting="MediaSlider_ManipulationStarting"
                        Minimum="0"
                        RelativePanel.LeftOf="RightTimeTextBlock"
                        RelativePanel.RightOf="LeftTimeTextBlock"
                        Style="{StaticResource MediaProgressSliderStyle}"
                        ThumbToolTipValueConverter="{StaticResource MusicDurationConverter}"
                        ValueChanged="MediaSlider_ValueChanged" />
                    <TextBlock
                        x:Name="FullRightTimeTextBlock"
                        Grid.Column="2"
                        Margin="20,0,10,0"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI"
                        RelativePanel.AlignRightWithPanel="True" />
                </Grid>
                <RelativePanel Grid.Row="2" Margin="10">
                    <StackPanel
                        x:Name="FullMediaControlMusicControlButtonPanel"
                        Orientation="Horizontal"
                        RelativePanel.AlignLeftWithPanel="True">
                        <Button
                            Click="PrevButton_Click"
                            Content="&#xE892;"
                            Style="{StaticResource MediaControlButtonStyle}"
                            Template="{StaticResource MediaControlButtonTemplate}"
                            ToolTipService.ToolTip="Previous" />
                        <Button
                            x:Name="FullPlayButton"
                            Width="48"
                            Height="48"
                            HorizontalAlignment="Center"
                            Click="PlayButton_Click"
                            Content="&#xE768;"
                            CornerRadius="25"
                            FontSize="24"
                            Style="{StaticResource MediaControlButtonStyle}"
                            Template="{StaticResource MediaControlButtonTemplate}">
                            <Button.KeyboardAccelerators>
                                <KeyboardAccelerator Key="F3" />
                            </Button.KeyboardAccelerators>
                        </Button>
                        <Button
                            Click="NextButton_Click"
                            Content="&#xE893;"
                            Style="{StaticResource MediaControlButtonStyle}"
                            Template="{StaticResource MediaControlButtonTemplate}"
                            ToolTipService.ToolTip="Next" />
                        <Button
                            Content="&#xE15D;"
                            Style="{StaticResource MediaControlButtonStyle}"
                            Template="{StaticResource MediaControlButtonTemplate}"
                            ToolTipService.ToolTip="Volume">
                            <Button.Flyout>
                                <Flyout>
                                    <StackPanel Orientation="Horizontal">
                                        <Button
                                            x:Name="FullVolumeButton"
                                            Click="VolumeButton_Click"
                                            Content="&#xE15D;"
                                            Style="{StaticResource MediaControlButtonStyle}"
                                            Template="{StaticResource MediaControlButtonTemplate}" />
                                        <Slider
                                            x:Name="FullVolumeSlider"
                                            Width="100"
                                            Margin="10,0,20,0"
                                            VerticalAlignment="Center"
                                            Maximum="100"
                                            Minimum="0"
                                            Style="{StaticResource MediaProgressSliderStyle}"
                                            ValueChanged="VolumeSlider_ValueChanged"
                                            Value="50" />
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                        <ToggleButton
                            x:Name="FullShuffleButton"
                            Click="ShuffleButton_Click"
                            Content="&#xE8B1;"
                            Style="{StaticResource MediaControlToggleButtonStyle}"
                            Template="{StaticResource MediaControlToggleButtonTemplate}" />
                        <ToggleButton
                            x:Name="FullRepeatButton"
                            Click="RepeatButton_Click"
                            Content="&#xE8EE;"
                            Style="{StaticResource MediaControlToggleButtonStyle}"
                            Template="{StaticResource MediaControlToggleButtonTemplate}" />
                        <ToggleButton
                            x:Name="FullRepeatOneButton"
                            Click="RepeatOneButton_Click"
                            Content="&#xE8ED;"
                            Style="{StaticResource MediaControlToggleButtonStyle}"
                            Template="{StaticResource MediaControlToggleButtonTemplate}" />
                        <Button
                            x:Name="FullLikeButton"
                            Click="LikeButton_Click"
                            Content="&#xEB51;"
                            Style="{StaticResource MediaControlButtonStyle}"
                            Template="{StaticResource MediaControlButtonTemplate}" />
                        <Button
                            Content="&#xE712;"
                            Style="{StaticResource MediaControlButtonStyle}"
                            Template="{StaticResource MediaControlButtonTemplate}"
                            ToolTipService.ToolTip="More">
                            <Button.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem
                                        x:Name="SavePlaylistItem"
                                        Click="SavePlaylistItem_Click"
                                        Icon="Add"
                                        Text="Save As New Playlist" />
                                    <MenuFlyoutItem
                                        x:Name="ClearNowPlayingItem"
                                        Click="ClearNowPlayingItem_Click"
                                        Icon="Clear"
                                        Text="Clear Now Playing" />
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" RelativePanel.AlignRightWithPanel="True">
                        <Button
                            x:Name="MusicInfoButton"
                            Click="MusicInfoButton_Click"
                            Content="&#xE90B;"
                            Style="{StaticResource MediaControlButtonStyle}"
                            Template="{StaticResource MediaControlButtonTemplate}"
                            ToolTipService.ToolTip="Show Music Info" />
                        <Button
                            x:Name="CarouselButton"
                            Click="CarouselButton_Click"
                            Content="&#xE7C5;"
                            Style="{StaticResource MediaControlButtonStyle}"
                            Template="{StaticResource MediaControlButtonTemplate}"
                            ToolTipService.ToolTip="Carousel Mode" />
                        <Button
                            x:Name="FullScreenButton"
                            Click="FullScreenButton_Click"
                            Content="&#xE740;"
                            Style="{StaticResource MediaControlButtonStyle}"
                            Template="{StaticResource MediaControlButtonTemplate}"
                            ToolTipService.ToolTip="Full Screen" />
                        <Button
                            x:Name="MiniPlayButton"
                            Click="MiniPlayButton_Click"
                            Content="&#xE744;"
                            Style="{StaticResource MediaControlButtonStyle}"
                            Template="{StaticResource MediaControlButtonTemplate}"
                            ToolTipService.ToolTip="Mini Player" />
                    </StackPanel>

                </RelativePanel>
            </Grid>
        </Grid>

    </Grid>
</UserControl>
