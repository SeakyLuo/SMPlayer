<Page
    x:Class="SMPlayer.ArtistsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            x:Name="MusicLibraryTitleTextBlock"
            Style="{StaticResource TitleTextBlockStyle}"
            Text="Artists" />
        <controls:MasterDetailsView
            Grid.Row="1"
            BackButtonBehavior="Automatic"
            CompactModeThresholdWidth="720"
            ItemsSource="{Binding Emails}">
            <controls:MasterDetailsView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0,8">
                        <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="{Binding From}" />
                        <TextBlock
                            Foreground="{ThemeResource Brush-Blue-01}"
                            MaxLines="1"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Text="{Binding Subject}" />
                        <TextBlock
                            MaxLines="1"
                            Opacity=".6"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Text="{Binding Body}" />
                    </StackPanel>
                </DataTemplate>
            </controls:MasterDetailsView.ItemTemplate>
            <controls:MasterDetailsView.DetailsTemplate>
                <DataTemplate>
                    <RelativePanel Margin="24">
                        <controls:ImageEx
                            x:Name="FromEllipse"
                            Width="50"
                            Height="50"
                            CornerRadius="999"
                            Source="{Binding Thumbnail}" />
                        <TextBlock
                            Margin="12,-6,0,0"
                            RelativePanel.RightOf="FromEllipse"
                            Style="{ThemeResource SubtitleTextBlockStyle}"
                            Text="{Binding From}" />
                        <TextBlock
                            x:Name="SubjectLine"
                            Margin="0,12,0,0"
                            RelativePanel.Below="FromEllipse"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Text="{Binding Subject}" />
                        <TextBlock
                            x:Name="Body"
                            Margin="0,12,0,0"
                            RelativePanel.Below="SubjectLine"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Text="{Binding Body}"
                            TextWrapping="Wrap" />
                    </RelativePanel>
                </DataTemplate>
            </controls:MasterDetailsView.DetailsTemplate>
        </controls:MasterDetailsView>
    </Grid>
</Page>
