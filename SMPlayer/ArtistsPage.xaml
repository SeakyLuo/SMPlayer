<Page
    x:Class="SMPlayer.ArtistsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            x:Name="MusicLibraryTitleTextBlock"
            Style="{StaticResource TitleTextBlockStyle}"
            Text="Artists" />
        <controls:MasterDetailsView
            Grid.Row="1"
            BackButtonBehavior="Automatic"
            CompactModeThresholdWidth="720"
            ItemsSource="{x:Bind Artists}">
            <controls:MasterDetailsView.MasterHeader>
                <ProgressRing
                    x:Name="ArtistsProgressRing"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    IsActive="False"
                    Visibility="Collapsed" />
            </controls:MasterDetailsView.MasterHeader>
            <controls:MasterDetailsView.ItemTemplate>
                <DataTemplate x:DataType="data:ArtistView">
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <Grid>
                            <Ellipse
                                Width="36"
                                Height="36"
                                Fill="Gray" />
                            <FontIcon Foreground="White" Glyph="&#xE8D4;" />
                        </Grid>
                        <TextBlock
                            Margin="10"
                            Text="{x:Bind Name}"
                            TextAlignment="Start" />
                    </StackPanel>
                </DataTemplate>
            </controls:MasterDetailsView.ItemTemplate>
            <controls:MasterDetailsView.DetailsTemplate>
                <DataTemplate x:DataType="data:ArtistView">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <RelativePanel>
                            <StackPanel Margin="15,10,0,10" RelativePanel.AlignLeftWithPanel="True">
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontSize="24"
                                    FontWeight="Bold"
                                    Text="{x:Bind Name}" />
                                <TextBlock FontSize="18" Text="Albums Songs" />
                            </StackPanel>
                            <SymbolIcon
                                VerticalAlignment="Center"
                                Foreground="{ThemeResource SystemColorHighlightColor}"
                                RelativePanel.AlignRightWithPanel="True"
                                Symbol="More" />
                            <Border
                                Width="100"
                                Height="1"
                                BorderThickness="1"
                                RelativePanel.AlignBottomWithPanel="True" />
                        </RelativePanel>
                        <ListView
                            Grid.Row="1"
                            ItemsSource="{x:Bind Albums}"
                            SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="data:AlbumView">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <StackPanel Orientation="Horizontal">
                                            <controls:ImageEx
                                                x:Name="AlbumCover"
                                                Width="60"
                                                Height="60"
                                                Margin="10"
                                                Source="{x:Bind Cover}" />
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontWeight="Bold"
                                                Text="{x:Bind Name}" />
                                        </StackPanel>
                                        <ListView
                                            Grid.Row="1"
                                            ItemsSource="{x:Bind Songs}"
                                            SelectionMode="Single">
                                            <!--<ListView.ItemTemplate>
                                            <DataTemplate x:DataType="data:Music">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{x:Bind Name}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>-->
                                        </ListView>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </DataTemplate>
            </controls:MasterDetailsView.DetailsTemplate>
        </controls:MasterDetailsView>
    </Grid>
</Page>
