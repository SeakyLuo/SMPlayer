<Page
    x:Class="SMPlayer.LocalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:SMPlayer.Models"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <local:LargeThumbnailVisibilityConverter x:Key="LargeThumbnailVisibilityConverter" />
        <SolidColorBrush x:Key="NavigationViewTopPaneBackground" Color="{ThemeResource ApplicationPageBackgroundThemeBrush}" />
        <DataTemplate x:Key="GridMusicViewDataTemplate" x:DataType="data:GridMusicView">
            <StackPanel Margin="10">
                <Image
                    Width="160"
                    Height="160"
                    Margin="10"
                    Source="{x:Bind Thumbnail}" />
                <TextBlock
                    FontSize="16"
                    FontWeight="Bold"
                    HorizontalTextAlignment="Left"
                    Text="{x:Bind Name}" />
                <TextBlock
                    FontSize="12"
                    HorizontalTextAlignment="Left"
                    Text="{x:Bind Artist}" />
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Local Items" />
        <NavigationView
            x:Name="LocalNavigationView"
            Grid.Row="1"
            BackRequested="LocalNavigationView_BackRequested"
            IsBackEnabled="True"
            IsSettingsVisible="False"
            ItemInvoked="LocalNavigationView_ItemInvoked"
            PaneDisplayMode="Top">
            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="LocalFoldersItem" Content="Folders">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8B7;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Name="LocalMusicItem"
                    Content="Music"
                    Icon="MusicInfo" />
            </NavigationView.MenuItems>
            <NavigationView.PaneFooter>
                <StackPanel Orientation="Horizontal">
                    <NavigationViewItem
                        x:Name="LocalListViewItem"
                        Margin="0,0,10,0"
                        Content="List View"
                        Icon="List"
                        Tapped="LocalListViewItem_Tapped"
                        Visibility="Visible" />
                    <NavigationViewItem
                        x:Name="LocalGridViewItem"
                        Margin="0,0,10,0"
                        Content="Grid View"
                        Tapped="LocalGridViewItem_Tapped"
                        Visibility="Collapsed">
                        <NavigationViewItem.Icon>
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF0E2;" />
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                </StackPanel>
            </NavigationView.PaneFooter>
            <Frame
                x:Name="LocalFrame"
                IsNavigationStackEnabled="True"
                Navigated="LocalFrame_Navigated" />
        </NavigationView>
    </Grid>
</Page>
