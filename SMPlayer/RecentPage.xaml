<Page
    x:Class="SMPlayer.RecentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Rectangle x:Name="LoadingPlaceHolder" Height="4" />
        <ProgressBar x:Name="LoadingProgressBar" IsIndeterminate="True" />
        <Pivot
            x:Name="RecentPivot"
            Grid.Row="1"
            SelectionChanged="RecentPivot_SelectionChanged">
            <PivotItem
                x:Name="RecentAddedItem"
                x:Uid="RecentAddedItem"
                Header="Recently Added">
                <local:GridMusicControl x:Name="AddedMusicView" />
            </PivotItem>
            <PivotItem
                x:Name="RecentPlayedItem"
                x:Uid="RecentPlayedItem"
                Header="Recently Played">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <CommandBar
                        Background="Transparent"
                        DefaultLabelPosition="Right"
                        IsDynamicOverflowEnabled="False"
                        OverflowButtonVisibility="Collapsed">
                        <AppBarButton
                            x:Uid="ClearHistoryAppButton"
                            Icon="Clear"
                            Click="ClearHistoryAppButton_Click"
                            Label="Clear History" />
                    </CommandBar>
                    <local:GridMusicControl Grid.Row="1" x:Name="PlayedMusicView" />
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
