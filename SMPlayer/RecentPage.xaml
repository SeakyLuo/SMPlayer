<Page
    x:Class="SMPlayer.RecentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SMPlayer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:SMPlayer.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Pivot x:Name="RecentPivot" Grid.Row="1" SelectionChanged="RecentPivot_SelectionChanged">
            <PivotItem
                x:Name="RecentAddedItem"
                x:Uid="RecentAddedItem"
                Header="Recently Added">
                <Grid Loaded="RecentAddedGrid_Loaded">
                    <ProgressRing 
                        x:Name="RecentAddedProgressRing" 
                        IsActive="False"
                        Width="100"
                        Height="100"/>
                    <ListView
                        x:Name="RecentAddedTimeLine"
                        ItemsSource="{x:Bind RecentAddedTimeLineList}"
                        ItemContainerStyle="{StaticResource StretchListViewItemStyle}"
                        Margin="0,5,0,0"
                        SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="data:MusicTimeLine">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock
                                    x:Name="RecentAddedListViewHeaderTextBlock"
                                    FontSize="24"
                                    FontWeight="SemiBold"
                                    Text="{x:Bind Title}" />
                                    <local:GridMusicControl Loaded="AddedMusicView_Loaded" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </PivotItem>
            <PivotItem
                x:Name="RecentPlayedItem"
                x:Uid="RecentPlayedItem"
                Header="Recently Played">
                <Grid Loaded="RecentPlayed_Loaded">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <CommandBar
                        Background="Transparent"
                        DefaultLabelPosition="Right"
                        IsDynamicOverflowEnabled="False"
                        OverflowButtonVisibility="Collapsed">
                        <AppBarButton
                            x:Name="ClearPlayHistoryAppButton"
                            x:Uid="ClearHistoryAppButton"
                            Click="ClearPlayHistoryAppButton_Click"
                            Icon="Clear"
                            Label="Clear History" />
                    </CommandBar>
                    <ProgressRing 
                        x:Name="RecentPlayedProgressRing" 
                        Grid.Row="1"
                        IsActive="False"
                        Width="100"
                        Height="100"/>
                    <local:GridMusicControl
                        x:Name="PlayedMusicView"
                        Grid.Row="1"
                        Margin="0,5,0,0" />
                </Grid>
            </PivotItem>
            <PivotItem
                x:Name="RecentSearchesItem"
                x:Uid="RecentSearchesItem"
                Header="Recent Searches">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <CommandBar
                        Background="Transparent"
                        DefaultLabelPosition="Right"
                        IsDynamicOverflowEnabled="False"
                        OverflowButtonVisibility="Collapsed">
                        <AppBarButton
                            x:Name="ClearSearchHistoryAppButton"
                            x:Uid="ClearHistoryAppButton"
                            Click="ClearSearchHistoryAppButton_Click"
                            Icon="Clear"
                            Label="Clear History" />
                    </CommandBar>
                    <ListView
                        x:Name="SearchHistoryListView"
                        Grid.Row="1"
                        Margin="0,5,0,0"
                        ContainerContentChanging="SearchHistoryListView_ContainerContentChanging"
                        IsItemClickEnabled="True"
                        ItemClick="SearchHistoryListView_ItemClick"
                        ItemContainerStyle="{StaticResource StretchListViewItemStyle}"
                        ItemsSource="{x:Bind recentSearches, Mode=OneWay}"
                        Loaded="SearchHistoryListView_Loaded"
                        SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="x:String">
                                <SwipeControl>
                                    <SwipeControl.RightItems>
                                        <SwipeItems Mode="Execute">
                                            <SwipeItem
                                                x:Uid="RemoveSwipeItem"
                                                Background="Red"
                                                Foreground="White"
                                                Invoked="RemoveItem_Invoked"
                                                Text="Remove">
                                                <SwipeItem.IconSource>
                                                    <SymbolIconSource Symbol="Remove" />
                                                </SwipeItem.IconSource>
                                            </SwipeItem>
                                        </SwipeItems>
                                    </SwipeControl.RightItems>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Center" Text="{x:Bind}" />
                                        <Button
                                            Grid.Column="1"
                                            Padding="15"
                                            VerticalAlignment="Stretch"
                                            VerticalContentAlignment="Stretch"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Click="ItemRemoveButton_Click"
                                            Content="&#xE108;"
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="12" />
                                    </Grid>
                                </SwipeControl>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
