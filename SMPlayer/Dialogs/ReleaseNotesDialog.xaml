<ContentDialog
    x:Class="SMPlayer.Dialogs.ReleaseNotesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SMPlayer.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel Margin="5">
            <TextBlock 
                x:Uid="ReleaseNotesTextBlock"
                Text="Release Notes"
                FontSize="36"
                FontWeight="Bold"/>
            <Button
                RelativePanel.AlignRightWithPanel="True"
                Click="CloseButton_Click"
                Content="&#xE894;"
                Style="{StaticResource FontIconButtonStyle}" />
        </RelativePanel>
        <TextBlock Grid.Row="1">
            <Run FontWeight="SemiBold" FontSize="24">Version 2.4.3:</Run>
            <LineBreak />
            <Run>1. Multi-select support for Recent Page.</Run>
            <LineBreak />
            <Run>2. In Playlist Page, the Create New Playlist button is moved to the dropdown list.</Run>
            <LineBreak />
            <Run>3. Search Page has an AddAllTo button.</Run>
            <LineBreak />
            <Run>4. Show music count.</Run>
        </TextBlock>
    </Grid>
</ContentDialog>
